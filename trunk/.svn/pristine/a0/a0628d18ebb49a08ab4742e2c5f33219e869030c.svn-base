<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!--field groups for page tools widget -->
  <field-group name="pageTools-widget-general-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view to be used to render the widget</ui:description>
      <enumeration value="addThis">
        <ui:label>AddThis</ui:label>
      </enumeration>
      <enumeration value="custom">
        <ui:label>Custom</ui:label>
      </enumeration>
      <ui:value-if-unset>addThis</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="pageTools-widget-custom-fields">
    <field name="smallFontSize" type="basic" mime-type="text/plain">
      <ui:label>Small Font</ui:label>
      <ui:description>You specify the small font size. Default is 70%.</ui:description>
      <ui:value-if-unset>70%</ui:value-if-unset>
    </field>
    <field name="mediumFontSize" type="basic" mime-type="text/plain">
      <ui:label>Medium Font</ui:label>
      <ui:description>You specify the medium font size. Default is 100%.</ui:description>
      <ui:value-if-unset>100%</ui:value-if-unset>
    </field>
    <field name="largeFontSize" type="basic" mime-type="text/plain">
      <ui:label>Large Font</ui:label>
      <ui:description>You specify the large font size. Default is 130%.</ui:description>
      <ui:value-if-unset>130%</ui:value-if-unset>
    </field>
  </field-group>

  <!-- content type definition for pageTools widget -->
  <content-type name="widget_pageTools">
    <ui:label>Page Tools Widget</ui:label>
    <ui:description>This widget can be used for having different tools while displaying article page.
      Currently, supplied tools include, fontsize, print and email article.
    </ui:description>
    <ui:title-field>title</ui:title-field>

    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The basic configuration fields</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="pageTools-widget-general-fields"/>
    </panel>

    <panel name="custom">
      <ui:label>Custom</ui:label>
      <ui:description>Custom configuration fields of the page tools widget</ui:description>
      <ref-field-group name="pageTools-widget-custom-fields"/>
    </panel>

    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields for page tools widget</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>

    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-public-fields"/>
    </panel>

    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>