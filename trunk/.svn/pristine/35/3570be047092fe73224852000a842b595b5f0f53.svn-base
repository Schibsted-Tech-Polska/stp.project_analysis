#viewport #header {
    border: 1px solid #bbb;
        border-bottom: 0 none;
    padding-top:10px;
}

#header .linksAndSearch {
    position:relative;
}

#header section {
    margin-bottom:0;
}

.linksAndSearch .gridUnit {
    color: #666;
    font-size: 10px;
    font-family: Arial, sans-serif;
    height: 65px;
    padding-top: 7px;
    text-align: right;
}

.linksAndSearch a {
    color: #666;
    font-size: 10px;
    text-align: right;
}

.linksAndSearch .gridUnit a:hover {
    text-decoration: underline;
}

.linksAndSearch .search {
    border:none;
    margin-right:0;
    padding-right:0;
}

.linksAndSearch .search form {
    margin-top:30px;
}

.linksAndSearch {
    margin-bottom: 10px;
}

.ie6 .linksAndSearch {
    overflow: hidden;
    height: 80px;
}

.linksAndSearch .icon-small {
    float: left;
    display: block;
    width: 18px;
    height: 20px;
}

.specialSpan130 {
    width:130px;
}

.specialSpan140 {
    width:140px;
}

.specialSpan840 {
    margin-left:10px;
    width:840px;
}

.subMenu .tipUsBlue {
    background: #014687 none;
    color: #fff;
    font-weight: bold;
    padding: 3px 0 2px;
    text-align: center;
    width: 130px;
    height: 20px;
}

.subMenu .tipUsBlue a {
    color: #fff;
}

.sprekThinHeader #header,
.sprekThinHeader #header a {
    background-image: url("/skins/publications/bt/gfx/backgrounds/backgroundSprekBT.png");
}