/**
  Footer
  Global footer styles
  @fileinfo
  */

/**
  Footer
  @group structure
  @style
  #footer Parent of footer section
  */

#footer {
    overflow: hidden;
    width:100%;
}

#footer #mnodigital {
    text-align:center;
    filter:alpha(opacity=40);
    opacity: 0.4;
}
#footer:hover #mnodigital {
    filter:alpha(opacity=100);
    opacity: 1;
}
#footer #mnodigital:after {
    color: #fff;
    font-size: 10px;
    text-align: center;
    content: "\00A9 Schibsted Norge Digital";
    display: block;
}