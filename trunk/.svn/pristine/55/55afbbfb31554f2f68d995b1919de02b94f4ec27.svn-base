/* Top Menu - standardMenu - general styles*/
.standardMenu ul {
    position: relative;
    z-index: 597;
}

.standardMenu  li {
    float: left;
    margin: 0;
    cursor: pointer;
}
.ie6 .standardMenu li {
    width: 0;  
}

.standardMenu li:hover  ul {
    left: auto;
    z-index:599;
}

.standardMenu .activeSection:hover  ul {
    left: -10000px;
    z-index:599;
}

.standardMenu a {
    background-color: #fff;
    color: #000;
    display: block;
    height: 15px;
    font-size: 16px;
        font-weight:bold;
    line-height: 1;
    padding: 5px 12px 5px 5px;
    position: relative;
    z-index: 600;
}

.standardMenu ul ul {
    -moz-box-shadow: 3px 2px 21px #888;
    -webkit-box-shadow: 3px 2px 21px #888;
    box-shadow: 3px 2px 21px #888;
    position: absolute;
        top: 100%;
        left: -10000px;
        z-index: 598;
}

.standardMenu ul ul ul {
    top: 1px;
    left: 99%;
}

.standardMenu li li {
    float: none;
    display: block;
}

.ie6 .standardMenu li li{
    width: 150px;
}

.ie7 .standardMenu li li {
    min-width: 150px;
}

.standardMenu ul ul a {
    font-size:14px;
        font-weight:normal;
    min-width: 150px;
    z-index: 598;
}

.topMainMenu .subMenu {
    background-color: #fff;
}

.topMainMenu .subMenu > li {
    background-color: #fff;
}

/* tab */
.standardMenu .tab {
    border-bottom:2px solid #666;
    margin-bottom:15px;
    z-index:1;
    width:100%;
}

.standardMenu .tab li {
    height:auto;
    z-index:1;
}

.standardMenu .tab a {
    background:#fff;
    border:1px solid #ccc;
        border-bottom:0 none;
        -moz-border-radius:10px 10px 0 0;
        -webkit-border-radius:10px 10px 0 0;
        border-radius:10px 10px 0 0;
    height:auto;
    margin:3px 5px 0;
    opacity:.5;
    -moz-transition:opacity 250ms ease-in;
        -webkit-transition:opacity 250ms ease-in;
        -ms-transition:opacity 250ms ease-in;
        transition:opacity 250ms ease-in;
}

.standardMenu .tab:hover a:hover,
.standardMenu .tab a:hover {
    background:#fff;
    opacity:1;
}

.standardMenu .tab .activeSection a {
    background:#fff;
    border:2px solid #666;
        border-bottom:2px solid #fff;
        -moz-border-radius:10px 10px 0 0;
        -webkit-border-radius:10px 10px 0 0;
        border-radius:10px 10px 0 0;
    color:#000;
    height:auto;
    line-height:1;
    margin:0 5px;
    opacity:1;
    position:relative;
        top:2px;
}

.standardMenu.serviceMenu {
    border-left:1px solid #999;
    border-right:1px solid #999;
        -moz-border-radius:0 0 3px 3px;
        -webkit-border-radius:0 0 3px 3px;
        border-radius:0 0 3px 3px;
    height:17px;
    position:absolute;
        top:0;
        right:0;
        z-index: 0;
}

@media screen and (max-width: 1220px) {
    .serviceMenu {
        right:0;
    }
}

.standardMenu.serviceMenu li {
    background:#fbf7ec; /*lys oker*/
    -moz-box-shadow:0 -2px 3px #ccc inset;
        -webkit-box-shadow:0 -2px 3px #ccc inset;
        box-shadow:0 -2px 3px #ccc inset;
    border-left:1px solid #999;
    border-bottom:1px solid #999;
    float:left;
    height:16px;
}

.standardMenu.serviceMenu li,
.standardMenu.serviceMenu li a {
    border-left:0 none;
    -moz-background-clip:padding-box;
        -webkit-background-clip:padding-box;
        background-clip:padding-box;
}

.standardMenu.serviceMenu a {
    background:transparent;
    border-left:0 none;
    color:#000;
    font-size:9px;
        font-weight:normal;
        line-height:1;
        text-transform:uppercase;
    height:10px;
    padding:3px 8px;
}

.standardMenu.serviceMenu a:hover {
    background:#f60;
    color:#fff;
}
.standardMenu.serviceMenu li:last-child a:hover {
    -moz-border-radius:0 0 2px;
        -webkit-border-radius:0 0 2px;
        border-radius:0 0 2px;
}

.standardMenu.serviceMenu li:first-child a:hover {
    -moz-border-radius:0 0 0 2px;
        -webkit-border-radius:0 0 0 2px;
        border-radius:0 0 0 2px;
}

.smallHeader {
    background:#fff;
    border-bottom:1px solid #999;
    -moz-box-shadow:0 0 15px #ccc;
        -webkit-box-shadow:0 0 15px #ccc;
        box-shadow:0 0 15px #ccc;
    padding:3px;
    position:fixed;
        top:0;
        left:0;
        right:0;
        z-index:1000;
}

#smallHeader input {
    width:100px;
}
#smallHeader a {
    height:auto;
    padding: 5px 10px 5px 5px;
    line-height:1;
}

#smallHeader .logo {
    padding:0;
}

#innerSmallHeader {
    margin:0 auto;
}