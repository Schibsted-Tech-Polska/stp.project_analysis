/* YR - Met.no - NRK - iPadTeaser */
.yrCopyiPadTeaser {
    overflow: hidden;
    margin-bottom:15px;
    width:100%;
}

.yrCopyiPadTeaser .yrBoxiPadTeaser,
.yrCopyiPadTeaser .metNrkBoxiPadTeaser {
    float:left;
}

.yrCopyiPadTeaser .yrBoxiPadTeaser {
    border-right: 1px solid #E4E3DC;
    margin-right:10px;
    padding-right:10px;
    width:179px;
}

.yrCopyiPadTeaser .metNrkBoxiPadTeaser {
    width:179px;
}

.yrCopyiPadTeaser span {
    color:#666;
    font-size:12px;
    text-transform:uppercase;
    width:100%;
}

.yrCopyiPadTeaser .nrkiPadTeaser {
    background-position: 0 -30px;
    width:85px;
}

.yrCopyiPadTeaser .metiPadTeaser {
    background-position: 0 -60px;
    margin-right:10px;
    width:84px;
}