#header {
    width: 100%;
    background-color: #3f698d;
    background-image: url(data:image/svg+xml;base64,);
    background-image: -moz-linear-gradient(top,  rgba(0,0,0,0.34) 0%, rgba(0,0,0,0) 100%);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.34)), color-stop(100%,rgba(0,0,0,0)));
    background-image: -webkit-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: -o-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: -ms-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: linear-gradient(to bottom,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
}
.main-header-panel {
    text-align: right;
    float: right;
    min-height: 93px;
    width: 620px;
    position: relative;
}
#header .main-header-panel .nowForecastForHeader {
    float: none;
    display: block;
    text-align: right;
}
.header-shorthand {
    width: 100%;
    clear: both;
    text-align: right;
    float: left;
    margin-bottom: 22px;
}
.header-shorthand .slogan-wrapper {
    float: left;
    text-align: left;
    margin-bottom: 0;
    margin-left: 115px;
    background-color: #893225;
    color: #fff;
    padding: 0 40px;
    font-size: 12px;
}
.header-shorthand .dateline,
.header-shorthand .contact-us,
.header-shorthand .topMainMenu {
    display: inline-block;
    text-align: center;
    vertical-align: top;
}
.mainHeaderArea .topLeftLogo {
    width: 350px;
    margin-left: 0;
}
#header .topMainMenu {
    margin-top: 0;
}
.header-shorthand .contact-us {
    margin-bottom: 0;
}
.header-shorthand .tipUs {
    background: transparent;
    color: #fff;
    border: 0 none;
    box-shadow: none;
    font-size: 12px;
    line-height: 20px;
    margin: 0 23px 0 0;
    padding: 0;
}
.header-shorthand .dateline {
    color: #fff;
    font-size: 12px;
    line-height: 20px;
    margin: 0;
    padding: 0 16px;
    border-left: 1px solid #fff;
}
.header-shorthand .topMainMenu a {
    background-color: #8c8786;
    color: #fff;
    font-size: 12px;
    font-weight: bold;
    padding: 0 12px;
    line-height: 20px;
    border-left: 1px solid #fff;
    height: auto;
}
.header-shorthand .topMainMenu li:first-child a,
.main-header-panel .topMainMenu li:first-child a{
    border-left: 0 none;
}
.header-bottom-panel {
    position: absolute;
    bottom: 0;
    right: 0;
}
.main-header-panel .topMainMenu,
.main-header-panel .searchField {
    display: inline-block;
    vertical-align: bottom;
    margin-bottom: 0;
}
.ie8 .main-header-panel .topMainMenu{
    float:left;
}
.ie8 .main-header-panel .searchField {
    float: right;
}
.main-header-panel .topMainMenu {
    padding: 6px 0 0 84px;
    border-top: 1px solid #fff;
}
.main-header-panel .topMainMenu li {
    padding-top: 6px;
}
.ie8 .standardMenu li {
    float:left;
}
.main-header-panel .topMainMenu a {
    background: transparent;
    color: #fff;
    text-transform: uppercase;
    font-weight: normal;
    font-size: 14px;
    line-height: 1em;
    padding: 0 13px 8px;
    border-left: 1px solid #fff;
}
.main-header-panel .topMainMenu a:hover {
    text-decoration: underline;
}
.main-header-panel .topMainMenu .activeSection {
    background-color: #fff;
}
.main-header-panel .topMainMenu .activeSection a {
    color: #3f698d;
    border-left: 0 none;
}
.main-header-panel .topMainMenu .activeSection + li a {
    border-left: 0 none;
}
.main-header-panel .topMainMenu .kultur a {
    border-color: #e27044;
}
.main-header-panel .topMainMenu .sport a {
    border-color: #97c58d;
}
.main-header-panel .searchField {
    padding-bottom: 13px;
    margin-left: 8px;
}
.main-header-panel .searchField .pillBox {
    border: 0 none;
    border-radius: 0;
    overflow: visible;
}
.main-header-panel .searchField .pillBox button {
    border-radius: 0;
    background-color: #893225;
    color: #fff;
    text-transform: uppercase;
    font-weight: normal;
    font-size: 12px;
    padding: 0 10px;
    border: 0 none;
}
.main-header-panel .searchField .pillBox input {
    margin-right: 3px;
    border-radius: 0;
    background-color: #fff;
}
.main-header-panel .searchField .pillBox button,
.main-header-panel .searchField .pillBox input {
    box-shadow: 4px 4px 7px 0px rgba(0,0,0,0.4);
}

/* small header */
#smallHeader {
    background-color: #3f698d;
}
#smallHeader a {
    font-size: 14px;
    font-weight: normal;
    line-height: 20px;
    padding: 0 10px;
    color: #FFF;
    background-color: #3f698d;
}
#smallHeader a:hover {
    text-decoration: underline;
}
#smallHeader .logo {
    margin-right: 10px;
}
#innerSmallHeader {
    padding-top: 4px;
}