.searchField.issue {
    background: url(/skins/publications/ap/gfx/aviser_sm.jpg) bottom;
    height:182px;
}

.searchField.issue .themeHeadline {
    background-color: #fff;
    background-color: rgba(255,255,255,.8);
}

.searchField.issue fieldset {
    background: #fff;
    background: rgba(255,255,255,.8);
    padding: 20px;
}

.searchField.issue ul {
    margin:5px 10px 0;
    overflow: hidden;
    width:100%;
}

.searchField.issue li {
    border-right: 1px solid #999;
    float: left;
    font-size: 11px;
    margin-right: 5px;
    padding-right: 5px;
}

.searchField.issue li:last-child {
    border-right: 0 none;
}