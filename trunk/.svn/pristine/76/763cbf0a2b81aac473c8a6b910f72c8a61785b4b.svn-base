<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!-- field groups definitions for profileActions widget -->
  <!-- general fields of profileActions widget-->
  <field-group name="profileActions-widget-basic-fields">
    <field name="title" type="basic" mime-type="text/plain">
      <ui:label>Headline</ui:label>
      <ui:description>The headline of the widget</ui:description>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view of this widget</ui:description>
      <enumeration value="login">
        <ui:label>Login</ui:label>
      </enumeration>
      <enumeration value="registration">
        <ui:label>Registration</ui:label>
      </enumeration>
      <enumeration value="editProfile">
        <ui:label>Edit profile</ui:label>
      </enumeration>
      <enumeration value="uploadProfilePicture">
        <ui:label>Upload profile picture</ui:label>
      </enumeration>
      <enumeration value="resetPassword">
        <ui:label>Reset password</ui:label>
      </enumeration>
      <enumeration value="changePassword">
        <ui:label>Change password</ui:label>
      </enumeration>
      <enumeration value="deleteProfile">
        <ui:label>Delete profile</ui:label>
      </enumeration>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
  </field-group>

  <!-- registration fields of profileActions widget-->
  <field-group name="profileActions-widget-login-fields">
    <field name="showFacebookSSO" type="boolean">
      <ui:label>Show Facebook SSO</ui:label>
      <ui:description>Indicates whether Facebook SSO will be displayed or not</ui:description>
      <ui:boolean-label value="true">Show the Facebook SSO</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the Facebook SSO</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="showGoogleSSO" type="boolean">
      <ui:label>Show Google SSO</ui:label>
      <ui:description>Indicates whether Google SSO will be displayed or not</ui:description>
      <ui:boolean-label value="true">Show the Google SSO</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the Google SSO</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="showYahooSSO" type="boolean">
      <ui:label>Show Yahoo SSO</ui:label>
      <ui:description>Indicates whether Yahoo SSO will be displayed or not</ui:description>
      <ui:boolean-label value="true">Show the Yahoo SSO</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the Yahoo SSO</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
  </field-group>

  <!-- registration fields of profileActions widget-->
  <field-group name="profileActions-widget-registration-fields">
    <field name="showCaptcha" type="boolean">
      <ui:label>Show Captcha</ui:label>
      <ui:description>Indicates whether captcha will be displayed or not</ui:description>
      <ui:boolean-label value="true">Show the captcha</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the captcha</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
  </field-group>

  <!-- advanced fields of forum widget-->
  <field-group name="profileActions-widget-advanced-fields">
    <field name="showProfileLinks" type="boolean">
      <ui:label>Display profile links?</ui:label>
      <ui:description>Configures if profile links will be shown or not</ui:description>
      <ui:boolean-label value="true">Show profile links</ui:boolean-label>
      <ui:boolean-label value="false">Do not show profile links</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
  </field-group>
  <!-- content type definition for profileActions widget -->
  <content-type name="widget_profileActions">
    <ui:label>Profile Actions Widget</ui:label>
    <ui:description>A widget for handling all the basic profile actions like login, registration, edit profile, reset
      password etc.
    </ui:description>
    <ui:title-field>title</ui:title-field>
    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The basic configuration fields</ui:description>
      <ref-field-group name="profileActions-widget-basic-fields"/>
    </panel>
    <panel name="login">
      <ui:label>Login</ui:label>
      <ui:description>The configuration fields for login view</ui:description>
      <ref-field-group name="profileActions-widget-login-fields"/>
    </panel>
    <panel name="registration">
      <ui:label>Registration</ui:label>
      <ui:description>The configuration fields for registration view</ui:description>
      <ref-field-group name="profileActions-widget-registration-fields"/>
    </panel>
    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The Advanced fields for profile actions widget</ui:description>
      <ref-field-group name="profileActions-widget-advanced-fields"/>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>
    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-private-fields"/>
    </panel>
    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Headline</ui:label>
        <ui:description>The title of the widget</ui:description>
      </field>
    </summary>
  </content-type>
</content-types>