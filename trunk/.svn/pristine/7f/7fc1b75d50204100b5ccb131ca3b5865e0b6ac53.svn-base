<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!-- field groups definitions for profileMenu widget -->
  <!-- general fields of profileMenu widget-->
  <field-group name="profileMenu-general-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view of the widget</ui:description>
      <enumeration value="default">
        <ui:label>Default</ui:label>
      </enumeration>
      <ui:value-if-unset>default</ui:value-if-unset>
    </field>
    <field name="showAvatar" type="boolean">
      <ui:label>Show avatar</ui:label>
      <ui:description>Decides if you should display the avatar in profile menu or not.</ui:description>
      <ui:boolean-label value="true">Show avatar picture</ui:boolean-label>
      <ui:boolean-label value="false">Don't show avatar picture</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
    </field>
    <field name="avatarImageVersion" type="enumeration">
      <ui:label>Avatar size</ui:label>
      <ui:description>The size of the avatar picture to be used in profile menu</ui:description>
      <enumeration value="w24">
        <ui:label>24 x 24</ui:label>
      </enumeration>
      <enumeration value="w48">
        <ui:label>48 x 48</ui:label>
      </enumeration>
      <enumeration value="w64">
        <ui:label>64 x 64</ui:label>
      </enumeration>
      <enumeration value="w96">
        <ui:label>96 x 96</ui:label>
      </enumeration>
      <ui:value-if-unset>w48</ui:value-if-unset>
    </field>
  </field-group>

  <!-- default fields of profileMenu widget-->
  <field-group name="profileMenu-default-fields">
    <field name="loginLinkText" type="basic" mime-type="text/plain">
      <ui:label>Login link text</ui:label>
      <ui:description>The lable of login link</ui:description>
      <ui:value-if-unset>Login</ui:value-if-unset>
    </field>
    <field name="registrationLinkText" type="basic" mime-type="text/plain">
      <ui:label>Registration link text</ui:label>
      <ui:description>The lable of registration link</ui:description>
      <ui:value-if-unset>Register</ui:value-if-unset>
    </field>
    <field name="welcomeText" type="basic" mime-type="text/plain">
      <ui:label>Welcome text</ui:label>
      <ui:description>The lable of welcome link</ui:description>
      <ui:value-if-unset>Welcome</ui:value-if-unset>
    </field>
    <field name="editProfileLinkText" type="basic" mime-type="text/plain">
      <ui:label>Edit profile link text</ui:label>
      <ui:description>The lable of edit profile link</ui:description>
      <ui:value-if-unset>Edit profile</ui:value-if-unset>
    </field>
    <field name="logoutLinkText" type="basic" mime-type="text/plain">
      <ui:label>Logout link text</ui:label>
      <ui:description>The lable of logout link</ui:description>
      <ui:value-if-unset>Log out</ui:value-if-unset>
    </field>
  </field-group>

  <!-- content type definition for profileMenu widget -->
  <content-type name="widget_profileMenu">
    <ui:icon>generic</ui:icon>
    <ui:label>Profile Menu Widget</ui:label>
    <ui:description>A widget for displaying profile menu.</ui:description>
    <ui:title-field>title</ui:title-field>
    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The general fields for configuring profile menu widget</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="profileMenu-general-fields"/>
    </panel>
    <panel name="default">
      <ui:label>Default</ui:label>
      <ui:description>The default configuration fields</ui:description>
      <ref-field-group name="profileMenu-default-fields"/>
    </panel>
    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>
    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-private-fields"/>
    </panel>
    <summary>
      <ui:label>Summary</ui:label>
      <field type="basic" mime-type="text/plain" name="title">
        <ui:label>Title</ui:label>
        <ui:description>The title of the widget</ui:description>
      </field>
    </summary>
  </content-type>
</content-types>