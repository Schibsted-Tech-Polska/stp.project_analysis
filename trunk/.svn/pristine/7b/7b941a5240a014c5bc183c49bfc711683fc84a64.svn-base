.ie7 .socialLinks {
    width:80px;
}
.socialLinks {
    float:right;
    display:inline;
    width:auto;
    border: 1px solid #a2a29b;
    border-style: none solid;
    vertical-align: bottom;
    height: 26px;
    position: relative;
    top:-7px;
    padding: 0 14px;
}

.socialLinks a {
	background-image: url(/skins/publications/bt/gfx/icons/social_sprite.png);
	background-repeat: no-repeat;
	display:inline;
    float: left;
	line-height:16px;
    height: 16px;
    width: 16px;
    overflow: hidden;
    text-indent: -9999px;
    text-align: left;
    padding: 0;
    margin-top:8px;
}

.socialLinks .rss {
    background-position: 0 0px;
	float: right;
}

.socialLinks .facebook {
    background-position: 0 -16px;
    float: right;
    margin-left: 7px;
    margin-right: 7px;
}

.socialLinks .twitter {
    background-position: 0 -32px;
}