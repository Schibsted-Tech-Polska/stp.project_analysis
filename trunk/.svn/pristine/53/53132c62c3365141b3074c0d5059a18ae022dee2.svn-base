<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!-- field groups definitions for favoritesList widget -->
  <!-- basic fields of favoritesList widget-->
  <field-group name="favoritesList-widget-basic-fields">
    <field name="type" type="enumeration">
      <ui:label>Type</ui:label>
      <ui:description>The type of the favorites list</ui:description>
      <enumeration value="userFavorites">
        <ui:label>User favorites</ui:label>
      </enumeration>
      <enumeration value="mostFavorites">
        <ui:label>Most favorites</ui:label>
      </enumeration>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view to be used to render the widget</ui:description>
      <enumeration value="simple">
        <ui:label>Simple</ui:label>
      </enumeration>
      <enumeration value="detailed">
        <ui:label>Detailed</ui:label>
      </enumeration>
      <ui:value-if-unset>simple</ui:value-if-unset>
    </field>
  </field-group>

  <!--simple fields of favoritesList widget-->
  <field-group name="favoritesList-widget-simple-fields">
    <field name="itemCountSimple" type="number">
      <ui:label>Maximum number of items</ui:label>
      <ui:description>The maximum number of items that will be shown in the widget</ui:description>
      <format>##</format>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <ui:value-if-unset>5</ui:value-if-unset>
    </field>
    <field name="showFavouritesCountSimple" type="boolean">
      <ui:label>Show favorites count</ui:label>
      <ui:boolean-label value="true">Show favorites count of the content item</ui:boolean-label>
      <ui:boolean-label value="false">Don't show favorites count of the content item</ui:boolean-label>
      <ui:description>Boolean value to indicate if we should favorites count</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

  <!--detailed fields of favoritesList widget-->
  <field-group name="favoritesList-widget-detailed-fields">
    <field name="itemCountDetailed" type="number">
      <ui:label>Maximum number of items</ui:label>
      <ui:description>The maximum number of items that will be shown in the widget</ui:description>
      <format>##</format>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <ui:value-if-unset>5</ui:value-if-unset>
    </field>
    <field name="showThumbDetailed" type="boolean">
      <ui:label>Show thumbnail</ui:label>
      <ui:description>Boolean value to indicate if we should show thumbnail</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="showIntroDetailed" type="boolean">
      <ui:label>Show lead text</ui:label>
      <ui:boolean-label value="true">Show lead text of the content item</ui:boolean-label>
      <ui:boolean-label value="false">Don't show lead text of the content item</ui:boolean-label>
      <ui:description>Showing the lead text will show a few lines of lead text from the related item</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="showCommentCountDetailed" type="boolean">
      <ui:label>Show comment count</ui:label>
      <ui:boolean-label value="true">Show comment count of the content item</ui:boolean-label>
      <ui:boolean-label value="false">Don't show comment count of the content item</ui:boolean-label>
      <ui:description>Boolean value to indicate if we should show comment count</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="showDateDetailed" type="boolean">
      <ui:label>Show date</ui:label>
      <ui:boolean-label value="true">Show published date of the content item</ui:boolean-label>
      <ui:boolean-label value="false">Don't show published date of the content item</ui:boolean-label>
      <ui:description>Boolean value to indicate if we should show date</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="dateFormatDetailed" type="basic" mime-type="text/plain">
      <ui:label>Date format</ui:label>
      <ui:description>The date format to be used for displaying dates</ui:description>
      <ui:value-if-unset>dd MMMM yyyy hh:mm a</ui:value-if-unset>
    </field>
    <field name="showFavouritesCountDetailed" type="boolean">
      <ui:label>Show favorites count</ui:label>
      <ui:boolean-label value="true">Show favorites count of the content item</ui:boolean-label>
      <ui:boolean-label value="false">Don't show favorites count of the content item</ui:boolean-label>
      <ui:description>Boolean value to indicate if we should favorites count</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="maxCharactersDetailed" type="number">
      <ui:label>Max characters of lead text</ui:label>
      <ui:description>Maximum number of characters of the lead text that will be displayed</ui:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>###</format>
    </field>
  </field-group>

  <!-- content type definition for favoriteList widget -->
  <content-type name="widget_favoritesList">
    <ui:label>Favorites List Widget</ui:label>
    <ui:description>This widget can be used for showing favorites list</ui:description>
    <ui:title-field>title</ui:title-field>
    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The basic configuration fields</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="favoritesList-widget-basic-fields"/>
    </panel>
    <panel name="simple">
      <ui:label>Simple</ui:label>
      <ui:description>The fields associated with the simple view of the widget</ui:description>
      <ref-field-group name="favoritesList-widget-simple-fields"/>
    </panel>
    <panel name="detailed">
      <ui:label>Detailed</ui:label>
      <ui:description>The fields associated with the detailed view of the widget</ui:description>
      <ref-field-group name="favoritesList-widget-detailed-fields"/>
    </panel>
    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>
    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-private-fields"/>
    </panel>
    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Title</ui:label>
         <ui:description>The title of the widget</ui:description>
      </field>
    </summary>
  </content-type>
</content-types>