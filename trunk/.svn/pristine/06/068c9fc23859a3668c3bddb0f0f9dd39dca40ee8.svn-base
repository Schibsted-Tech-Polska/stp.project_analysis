// Color definitions

$trueBlack: #000000;
$themeBlack: $trueBlack+#111111;
$themeBlue: #014687;
$themeBlueDarken: darken($themeBlue, 10%);
$themeBlueIntense: #0159AC;
$themeKindOfBlue: #246DB1;
$pureWhite: #ffffff;
$dirtyWhite: $pureWhite - $themeBlack;
$gray: #3F3F3F;
$lightGray: $gray+#404040;
$alertColor: #ff0000;

// BT colors

$btGradientStart: #2771aa;
$btGradientStop: #122358;
$btBGbase: #1d4485;

$startColor: desaturate(lighten($btGradientStart,10%),10%);
$endColor: desaturate(lighten($btGradientStop,10%),10%);

$mobileUnitSize: 5px;

// General mixins

@mixin floatWide($dir,$size) {
	float: $dir;
	width: $size;
}

@mixin transformRotate($deg) {
    -moz-transform: rotate($deg);
    -webkit-transform:rotate($deg);
    -o-transform:rotate($deg);
    -ms-transform:rotate($deg);
}

@mixin ellipsis($options,$wrap) {
    @if $options == default {
        text-overflow: clip;
        visibility: visible;
        white-space: normal;
        word-wrap: normal;
    } @else if $options == enabled {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        @if $wrap == break {
            word-wrap: break-word;
        }
    }
}

@mixin backgroundGradient($dirStart,$rangeFrom,$rangeTo,$colorFrom,$colorTo) {
    background: $colorFrom;
    background: -moz-linear-gradient($dirStart,  $colorFrom $rangeFrom, $colorTo $rangeTo);
    //background: -webkit-gradient(linear, $dirStart, left bottom, color-stop($rangeFrom,$colorFrom), color-stop($rangeTo,$colorTo));
    background: -webkit-linear-gradient($dirStart,  $colorFrom $rangeFrom,$colorTo $rangeTo);
    background: -o-linear-gradient($dirStart,  $colorFrom $rangeFrom,$colorTo $rangeTo);
    background: -ms-linear-gradient($dirStart,  $colorFrom $rangeFrom,$colorTo $rangeTo);
    background: linear-gradient($dirStart,  $colorFrom $rangeFrom,$colorTo $rangeTo);
}

@mixin boxShadow($x,$y,$blur,$thickness,$color) {
	-moz-box-shadow: $x $y $blur $thickness $color;
	-webkit-box-shadow: $x $y $blur $thickness $color;
	box-shadow: $x $y $blur $thickness $color;
}

@mixin roundCorners($size) {
	-moz-border-radius: $size;
	-webkit-border-radius: $size;
	border-radius: $size;
}

@mixin boxSizing($mode) {
    box-sizing:$mode;
    -moz-box-sizing:$mode;
    -webkit-box-sizing:$mode;
}

@mixin filterIt($filter,$amount) {
    filter: $filter+'('#{$amount}')';
    -webkit-filter: $filter+'('#{$amount}')';
    -moz-filter: $filter+'('#{$amount}')';
    -o-filter: $filter+'('#{$amount}')';
    -ms-filter: $filter+'('#{$amount}')';
}

@mixin overviewVerticalPrice {
    @include boxShadow(0,0,0,2px,rgba($pureWhite,.35));
    @include roundCorners(3px);
    background: none repeat scroll 0 0 #393939;
    border: 1px solid $trueBlack;
    color: $pureWhite;
    display: block;
    font: {
        size: 11px;
        weight: bold;
    }
    padding: 2px 5px;
    position: absolute;
}