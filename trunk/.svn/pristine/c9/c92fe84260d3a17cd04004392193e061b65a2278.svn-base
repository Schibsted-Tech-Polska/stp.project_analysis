<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <field-group name="mobile-logo-widget-basic-fields">
      <field name="view" type="enumeration">
        <ui:label>View</ui:label>
        <ui:description>View used to render the widget</ui:description>
        <enumeration value="default">
          <ui:label>Default</ui:label>
        </enumeration>
        <ui:value-if-unset>default</ui:value-if-unset>
      </field>
    </field-group>

  <field-group name="mobile-logo-widget-image-fields">
     <field type="boolean" name="resize">
       <ui:label>Resize Image</ui:label>
       <ui:description>Set to true if the image should be resized</ui:description>
       <ui:value-if-unset>true</ui:value-if-unset>
       <constraints>
	      <required>true</required>
	    </constraints>
     </field>
     <field type="number" name="size">
       <ui:label>Image Size</ui:label>
       <ui:description>Image size in percent of the screen</ui:description>
       <constraints>
         <minimum>10</minimum>
         <maximum>100</maximum>
       </constraints>
       <ui:value-if-unset>100</ui:value-if-unset>
     </field>
   </field-group>

  <!--content type definition for mobileLogo widget-->
  <content-type name="widget_mobileLogo">
    <ui:icon>generic</ui:icon>
    <ui:label>Mobile Logo Widget</ui:label>
    <ui:description>A widget for displaying the logo of the website.</ui:description>
    <ui:title-field>title</ui:title-field>

    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The general fields for configuring logo widget</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="mobile-logo-widget-basic-fields"/>
    </panel>

    <panel name="image">
      <ui:label>Image</ui:label>
      <ui:description>Image configuration</ui:description>
      <ref-field-group name="mobile-logo-widget-image-fields"/>
    </panel>

    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields for page tools widget</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>

    <ref-relation-type-group name="logoAttachments"/>

    <summary>
      <ui:label>Summary</ui:label>
      <field type="basic" mime-type="text/plain" name="title">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>