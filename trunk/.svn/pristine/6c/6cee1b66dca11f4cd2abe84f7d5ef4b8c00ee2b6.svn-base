.jobAdSearch2.jobAdDescription .backButton {
    text-decoration: none;
    font-size: 12px;
    position: absolute;
    bottom: 0;
    z-index: 1000;
    line-height: 20px;
    color: #000;
    right: 0;
}

.jobAdSearch2.jobAdDescription h1 {
    font-size: 35px;
    margin-top: 15px;
}

.jobAdSearch2.jobAdDescription .wysiwyg {
    font-family: Arial, sans-serif;
    font-size: 14px;
    margin: 10px 0;
    min-height: 450px;
}

.jobAdSearch2.jobAdDescription .wysiwyg ul {
    list-style-type: disc;
    padding-left: 20px;
}

.jobAdSearch2.jobAdDescription .wysiwyg p {
    margin-bottom: 0;
}

/* job ad */
.jobAdSearch2.jobAd a,
.jobAdSearch2.jobAd a:hover {
    color: #000;
    text-decoration: none;
}
.jobAdSearch2.jobAd a:hover {
    text-decoration: none;
}

.jobAdSearch2 .error {
    background-color: red;
    color: #fff;
        font-weight: bold;
    padding: 0 4px;
}

/* less than iPad's 768px */
@media only screen
and (max-device-width : 767px) {
    .jobAdSearch2.jobAdDescription h1 {
        font-size: 25px;
    }
    .jobAdDescription iframe {
        width: 100%;
        height: auto;
    }
}