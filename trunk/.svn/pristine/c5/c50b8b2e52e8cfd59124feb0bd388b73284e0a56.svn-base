#outerWrapper {
    background-color:#333;
    overflow: hidden;
    width:100%;
}

@media all and (max-width: 1000px) {
    .notResponsive #outerWrapper {
        width: 1000px;
    }
}

#surround {
    -moz-transition: margin 100ms ease-in-out;
        -webkit-transition: margin 100ms ease-in-out;
        -ms-transition: margin 100ms ease-in-out;
        transition: margin 100ms ease-in-out;
    position:relative;
}
.offCanvas.offCanvasDefault {
    position: absolute;
    top: -9999px;
    top: -9999px;
    left: -9999px;
}

.nojs .offCanvas.offCanvasDefault:checked ~ #surround,
.offCanvasChecked #surround {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.nojs .offCanvas.offCanvasDefault.left:checked ~ #surround,
.offCanvas-left #surround {
    margin-left: 80%;
    margin-right: -80%;
 }

.offCanvas-left.scrollUp #header .mainHeader {
    left: 80%;
    right:-80%;
}

.ie8.offCanvas-left #surround {
    margin-left:320px;
    margin-right:-320px;
}

.ie8.offCanvas-left.scrollUp #header .mainHeader {
    left: 320px;
    right: -320px;
}

.nojs .offCanvas.offCanvasDefault.right:checked ~ #surround,
.offCanvas-right #surround {
    margin-right:80%;
    margin-left:-80%;
}

.offCanvas-right.scrollUp #header .mainHeader {
    left: -80%;
    right:80%;
}

.ie8.offCanvasChecked.offCanvas-right #surround {
    margin-right:320px;
    margin-left:-320px;
}

.ie8.offCanvas-right.scrollUp #header .mainHeader {
    left: -320px;
    right: 320px;
}

@media all and (min-width:768px) {
    .nojs .offCanvas.offCanvasDefault.left:checked ~ #surround,
    .offCanvas-left #surround{
        margin-left:20rem;
        margin-right:-20rem;
    }

    .offCanvas-left.scrollUp #header .mainHeader {
        left: 20rem;
        right:-20rem;
    }

    .nojs .offCanvas.offCanvasDefault.right:checked ~ #surround,
    .offCanvas-right #surround {
        margin-right:20rem;
        margin-left:-20rem;
    }
    .offCanvas-right.scrollUp #header .mainHeader {
        left: -20rem;
        right:20rem;
    }
}