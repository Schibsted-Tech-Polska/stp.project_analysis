.storedArticles.listArticles {
    color: #fff;
    margin: 5px;
        margin: .3125rem;
}

.storedArticles.listArticles a {
    color:#fff;
}

.storedArticles.listArticles li {
    background: rgba(255,255,255,.1);
    border-radius: 5px;
        border-radius: .3125rem;
    margin-bottom: 5px;
        margin-bottom: .3125rem;
    padding: 5px;
        padding: .3125rem;
    position: relative;
    overflow: hidden;
}

.storedArticles.listArticles h2 {
    font-family: arial, sans-serif;
    font-size: 20px;
        font-size: 1.25rem;
}

.storedArticles.listArticles .media {
    width:33%;
}

.storedArticles.listArticles img {
    border: 1px solid rgba(255,255,255,.3);
    width: 100%;
}

.storedArticles.listArticles .info {
    background: rgba(255,255,255,.2);
    border-radius: 5px;
        border-radius: .3125rem;
    font-size: 10px;
        font-size: .625rem;
    margin: 5px 0;
        margin: .3125rem 0;
    padding: .3125rem;
        padding: 5px;

}

.storedArticles.listArticles .published,
.storedArticles.listArticles .stored {
    font-size: 14px;
    line-height: 1em;
}

.storedArticles.listArticles time {
    color: rgba(255,255,255,.5);
    font-size: 10px;
        font-size: .625rem;
}

.storedArticles.listArticles .delete {
    float:right;
}