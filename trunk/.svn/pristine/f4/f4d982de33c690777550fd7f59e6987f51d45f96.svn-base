#header .nowForecastForHeader {
    float:left;
    font-size: 15px;
    line-height: 25px;
    height: 25px;
    position: relative;
    z-index: 2;
    color: #666;
    text-align: left;
    width: auto;
    margin:-1px 0 0 15px;
}

#header .nowForecastForHeader a {
    color: #fff;
}
#header .nowForecastForHeader .label {
    display: block;
    height: 25px;
    line-height: 1em;
    padding-top:5px;
    padding-bottom: 5px;
    margin-right: 0;
}
#header .nowForecastForHeader a.label:hover {
    text-decoration: none;
}
#header .nowForecastForHeader a.label:hover .sted {
    text-decoration: underline;
}
#header .nowForecastForHeader span {
    vertical-align: top;
}

#header .nowForecastForHeader.large .temp {
    font-size: 12px;

}

.weather span.weather-icon {
    margin: 0 2px 0 0;
    position: relative;
    top:-6px;
}
#header .nowForecastForHeader .sted {
    font-weight: 500;
}

#header .nowForecastForHeader .temp.warm {
    line-height: 14px;
    font-weight: 500;
}

@media only screen and (max-width : 320px) {
    #header .nowForecastForHeader{
        margin-top: 0;
        height: 55px;
        line-height: 55px;
        position: relative;
        float: right;
    }
}