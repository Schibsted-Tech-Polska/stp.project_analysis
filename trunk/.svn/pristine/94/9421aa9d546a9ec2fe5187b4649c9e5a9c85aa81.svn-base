/* Tabs for article START */
#page ul[role="tablist"] {
    background-color: #00aeef;
    font-family: ClanWeb, sans-serif;
        font-weight:normal;
    padding: 5px 7px 0 7px;
    height: 31px;
    font-size: 14px;
    margin-top: 8px;
}

.ie ul[role="tablist"] {
    font-family: ClanWebNormal, sans-serif;
}

ul[role="tablist"] li {
    display: inline;
    text-transform: lowercase;
    padding: 8px 15px 12px 15px;
}

ul[role="tablist"] li[aria-selected="true"] {
    color: #00aeef;
    background-color: #FFFFFF;
    outline: none;
}

div[role="tabpanel"],
section[role="tabpanel"] {
    border:0 none;
    -moz-box-shadow: 0 0 0 rgba(0, 0, 0, .3 );
    -webkit-box-shadow: 0 0 0 rgba(0, 0, 0, .3);
    box-shadow: 0 0 0 rgba(0, 0, 0, .3);
    top:2px;
}

li[role="tab"] {
    background: transparent;
    border:0 none;
    color:#fff;
    height: 25px;
}
