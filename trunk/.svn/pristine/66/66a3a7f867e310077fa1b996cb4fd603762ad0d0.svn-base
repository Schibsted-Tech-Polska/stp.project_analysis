.weather.default {
    position:relative;
        top:10px;
    text-align: left;
}

.weather.default a {
    float: left;
    font-size:10px;
        color:#999;
    text-align: left;
}

.weather.default .weather-today,
.weather.default .weather-tomorrow {
    padding-left:4px;
}

.weather.default .weather-symbol {
    color: #007AA6;
    font-size: 12px;
    font-weight: bold;
}

.weather.default .weather-symbol {
    display:block
}

.weather.default .weather-symbol.warm {
    color: #990000;
}
.weather.default a {
    display:none;
}

.weather.default a,
.weather-today,
.weather-tomorrow {
    display:block;
}

.weatherSectionElement {
    margin-left: 10px;
        margin-top: -4px;
}