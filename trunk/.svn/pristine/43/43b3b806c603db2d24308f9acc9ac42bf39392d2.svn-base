#header {
    background-color: transparent;
    margin: 0;
    padding: 20px 0 0;
    position:relative;
    z-index:3;
    width: 100%;
}
.externalheader #header {
    padding-top:0;
}

.hasNotAccess #header {
    padding-top: 71px;
}

#header .borders {
    margin-left:-10px;
    padding: 0 10px;
}
#header .gridRow {
    margin-top: 0;
}
.shortHandBar {
    background: #b0b1b4;
    border-bottom:1px solid #6e6f71;
    color: #272425;
}

.ie .shortHandBar {
    height:37px;
}

.shortHandBar .widget.code {
    float: right;
    width: 500px;
    text-align: right;
    margin-right: 2px;
}

.shortHandBar .widget.code .sectionMenu li {
    display: inline-block;
}

.mainHeaderArea > .span10 {
    background-color: #4d4d4f;
    position: relative;
    color:#fff;
}

.mainHeader {
    border-top:0 none;
    padding: 5px 10px 10px;
    position:relative;
    z-index:2;
}

#header .mainHeader > .gridRow {
    margin: 0 -10px;
}

#header a:hover {
    text-decoration: none;
}

#header .logo {
    margin: 10px 0 10px 20px;
    float: left;
}

#header .dateline {
    float:right;
    font-size: 12px;
    clear: right;
    padding-top: 40px;
}
#header .dateline:first-letter {
    text-transform: capitalize;
}

#header .mainHeader .menuBar {
    background: #E53E31 ;
        background-image: -moz-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,.2));
        background-image: -webkit-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,.2));
        background-image: -o-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,.2));
        background-image: -ms-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,.21));
        background-image: linear-gradient(to bottom, rgba(0,0,0,0) 70%, rgba(0,0,0,.21));
    border-radius: 2px 2px 0px 0px;
    box-shadow:0 1px 2px rgba(0,0,0,0.3);
    float: left;
    margin-left: -16px;
        margin-right: -16px;
    max-height: 35px;
    position: relative;
        z-index: 3;
    width:1012px;
}

#header .menuBar:after,
#header .menuBar:before {
    content: "";
    display: block;
    position: absolute;
    bottom: -6px;
}
#header .menuBar:after {
    border-top: 6px solid #333;
    border-right: 6px solid transparent;
    right: 0;
}

#header .menuBar:before {
    border-top: 6px solid #333;
    border-left: 6px solid transparent;
    left: 0;
}
#header .mainHeader .menuBar .topMenu {
    float:left;
    height: 43px;
}
#header .e-avis {
    position: absolute;
    left:1055px;
    top:0;
}
#header .e-avis h4 {
    font-weight: normal;
    margin-bottom:5px;
    font-size: 14px;
    text-align: center;
}

/* search box */
#header .pillBox {
    position: relative;
    width: 125px;
    height: 24px;
    border-radius: 2px;
    margin-right: 5px;
    margin-top: 4px;
    padding-left: 25px;
    border: 0 none;
    box-shadow: 1px 1px 2px 1px rgba(0,0,0,0.3);
    background: #fefefe url("/skins/publications/lindesnes/gfx/search.png") no-repeat 3px 3px;
}
#header .pillBox input {
    padding:0;
    box-shadow: none;
    width: 158px;
    height: 26px;
    font-size: 12px;
}
#header .pillBox input:focus {
    background-color: transparent;
    color: #272425;
}
#header .pillBox button {
    display: none;
}
.mainHeaderArea .social-icons {
    position: absolute;
    right: -42px;
    top:0;
}
.mainHeaderArea .social-icons a {
    display: block;
    text-indent: -999999px;
    background: #fff url(/skins/publications/lindesnes/gfx/social-icons.png) no-repeat;
    width:40px;
    height:35px;
    margin-bottom: 2px;
    margin-top: 2px;
    box-shadow: 0 0 3px rgba(0, 0, 0, .1);
    border: 1px solid #CCC;
    border-left: 0 none;
    border-radius: 0 3px 3px 0;
}
.mainHeaderArea .social-icons a.facebook{
    background-position: 3px 7px;
}
.mainHeaderArea .social-icons a.instagram {
    background-position: 4px -73px;
}
.mainHeaderArea .social-icons a.twitter {
    background-position: 4px -32px;
}
.mainHeaderArea .header-text {
    float:right;
    padding: 5px 0px;
    margin-bottom: 0;
}
.mainHeaderArea .header-text p {
    margin-bottom: 0;
}
.mainHeaderArea .nowForecastForHeader {
    float:right;
    clear: right;
}
.menuBar .widget.rss {
    float:right;
    width: 30px;
    height: 30px;
    overflow: hidden;
    margin: 2px 50px 0 0;
}
.menuBar .widget.rss a {
    text-indent: -999999px;
    background: url(/skins/publications/lindesnes/gfx/social-icons.png) no-repeat 0 -112px;
    display: block;
    height: 30px;
}

.shortHandBar .tipUs,
.shortHandBar .mailTo {
    font-size: 16px;
    line-height: 35px;
    font-weight: bold;
    color: #272425;
}
.shortHandBar .tipUs {
    margin: 0;
    padding: 0;
    padding-left: 25px;
    background-color: transparent;
}
.shortHandBar .mailTo {
    font-size: 16px;
    padding-left: 44px;
    margin-right: 45px;
    background-position: 0px 5px;
}
.shortHandBar .tipUs a,
.shortHandBar .mailTo a {
    color: #272425;
    text-shadow:0 1px 0 rgba(255,255,255,.5);
}
.shortHandBar .tipUs a em {
    color: #b6222a;
    font-style: normal;
}

