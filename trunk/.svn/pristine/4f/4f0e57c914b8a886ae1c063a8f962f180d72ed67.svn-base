{{each items}}
    {{if img}}
        <img src="${img}" alt=""/>
    {{/if}}
    {{if caption}}
        <p class="caption">{{html caption}}</p>
    {{/if}}
    <h1>${title}</h1>
    <p class="leadText">{{html text}}</p>

    {{if external}}
        <p class="byline author" itemtype="http://data-vocabulary.org/Person" itemscope="itemscope">
            <span class="prefix">AV:</span>
            <span class="fn" itemprop="name">${author}</span>
            <span class="role" itemprop="role">Leser</span>
        </p>
    {{/if}}

    {{if !external && author=="bt" || !external && author=="Bergens Tidende"}}
        <p class="byline author" itemtype="http://www.data-vocabulary.org/Organization" itemscope="itemscope">
            <span class="prefix">AV:</span>
            <span class="org" itemprop="name">Bergens Tidende</span>
         </p>
    {{/if}}

    {{if !external && author=="Stavanger Aftenblad" || !external && author=="sa"}}
        <p class="byline author" itemtype="http://www.data-vocabulary.org/Organization" itemscope="itemscope">
            <span class="prefix">AV:</span>
            <span class="org" itemprop="name">Stavanger Aftenblad</span>
        </p>
    {{/if}}

    {{if !external && author=="Aftenposten" || !external && author=="ap" || !external && author!="bt" && !external && author!="Bergens Tidende" && !external && author!="Stavanger Aftenblad" && !external && author!="sa" }}
        <p class="byline author" itemtype="http://www.data-vocabulary.org/Organization" itemscope="itemscope">
            <span class="prefix">AV:</span>
            <span class="org" itemprop="name">Aftenposten</span>
         </p>
    {{/if}}

{{/each}}