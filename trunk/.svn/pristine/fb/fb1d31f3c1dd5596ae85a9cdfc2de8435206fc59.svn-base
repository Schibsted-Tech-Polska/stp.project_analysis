############################################################################
# Cache Settings
############################################################################
# Cache settings that are used in servlet response headers
# 
############################################################################
image_cache_time_seconds=3600
css_cache_time_seconds=21600
rss_cache_time_seconds=1000
feed_cache_url=http://wapapp.mobiletech.no/dextella-cache-wars-cache/Cache
frame_cache_module_url=http://wapapp.mobiletech.no/dextella-cache-wars-cache/Cache
############################################################################
# OSCache of Images Settings
############################################################################
# DXF uses OSCache to cache images. In an standalone or Escenic installation
# this flag should be set to 'true'.
#
# Default:
#	false 
############################################################################
use_oscache_for_images_file=true

############################################################################
# OSCache delete strategy
############################################################################
# what should the cache maintainer do when it is run? The cache maintainer 
# can be scheduled further down in this file
#  
# 1 = delete all cache that is expired
# 2 = delete all cache
# Default:
#	1 
############################################################################
oscache_maintenance_delete_strategy=1

############################################################################
# OSCache path
############################################################################
# The folder where the cached files will be stored
# default:
#  System property: "java.io.tmpdir"
############################################################################
image_filecache_folder=/data/media/ap/mobileimages

############################################################################
# OSCache - Time to live
############################################################################
# How long should cached images be kept? the time is in milliseconds
# examples:
# 1 hour = 3600000, 1 day =  86400000, 1 week = 604800000, 
# 1 month (31 days) =  18748800000
############################################################################
image_disk_cache_time_to_live=259000000

############################################################################
# WURFL
############################################################################
# WURFL is DXF's device repository. It contains 1 main file (from the
# WURFL community, and several patch files provided by Mobiletech.  
# 
# These settings define the the local wurfl location, the wurfl repository
# and which wurfl files that should be downloaded
############################################################################
local_wurfl_location=WEB-INF/
wurfl_url=http://www.mobiletech.no/wurfl/
wurfl_files=wurfl.xml,wurfl_patch.xml,wurfl_patch_robots.xml,web_browsers_patch.xml


############################################################################
# Scheduling
############################################################################
# Dextella Frame is dependent on some daily tasks:
#
# - updating wurfl
# - cleaning cache
# 
# This is cron expressions. Ex: "0 15 10 * * ? *" (Fire at 10:15am every day)
############################################################################
schedule_wurfl=0 5 05 * * ? 2000
schedule_maintain_oscache_file_cache=0 5 05 * * ? 2000

