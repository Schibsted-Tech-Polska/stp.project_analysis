############################################################################
#image_server_url=/wf-escenic-times/
image_server_url=/
jpg_compression=0.0





############################################################################
# Widgets
############################################################################
# Define the default scripts
#
# Example:
#  image_server_url=http://media.mobiletech.no/
#
# Default:
#	none = use the internal servlets for serving images
############################################################################

#widget_master_scripts=jquery-1.2.6.min.js, history.js, livequery.js,frame-1.0.0.js,init.js
#widget_plugin_scripts=
compress_javascript=false
compress_css=false
use_cache_on_widget_js=true
use_cache_on_widget_css=true
#preserve_ctx_path_for_pack=true


############################################################################
# Use a database
############################################################################
# A boolean value that specifies if DXF should use a databse or not.
# For Standalone installation and Escenic installation this should be 'false'
# 
# Example:
#  frame_use_db=false 
# 
# Default:
#	true 
############################################################################
frame_use_db=false
############################################################################
# Webapp path
############################################################################
# How do we get to the root of the webapp
# 
# Default:
#	/ 
############################################################################
#webapp_path=/wf-escenic-times/
webapp_path=/

############################################################################
# formatting by the dxf:out tag
############################################################################
# dxf:out is a tag that formats text so that it turns 'mobile friendly'
# 
# Some flags:
# * cleanHtml - removes 'invalid' html such as <object>, <table> etc.
# * escapeXML - escapes XML. Ex: '<' is escaped to &lt; 
# 
# Default:
#	none 
############################################################################
dxfout_escapeXml=false
dxfout_cleanHtml=true


#####################   jquery     ###########
jquery_path=/resources/js/mno/utils/jquery-1.9.1.min.js
jquery_location=http


############################################################################
# More dxf:out START
############################################################################
# Below is the regular expressions used by dxf:out.
#
# *Note that all spesial java characters such as \ need to be escaped
# *Tags need to be replaced with DML tags (Dextella Markup Language). This
#   is because we need to make sure that tags are multiserved to all markups.
############################################################################
#validates an email address
regex_email=^([0-9a-zA-Z]([-.\\w]*[0-9a-zA-Z])*@([0-9a-zA-Z][-\\w]*[0-9a-zA-Z]\\.)+[a-zA-Z]{2,9})$

#remove bold and italic for chtml and wml
regex_invalid_wml_tags=(?s)(?i)</?[bi]\\s?>
regex_invalid_chtml_tags=(?s)(?i)</?[b]\\s?>


#regex for replacing links, it is possible to specify 0-n rules. 
#example: article rule 
regex_replace_links_1=true
regex_valid_link_1=(?s)(?i)<a\\shref=\"(http://[^<>]*?(sa\\.no|ba\\.no|rogalandsavis\\.no).*?[^\"]*?)\"[^<>]*?>(.*?)</a>
regex_link_replacement_1=[DML href="$1"]$2[/DML]
#then rewrite all other adresses to the exit servlet
regex_replace_links_2=true
regex_valid_link_2=(?s)(?i)<a\\shref=\"(http://.*?[^\"<>]*?)\"[^<>]*?>(.*?)</a>
regex_link_replacement_2=[DML href="$1"]$2[/DML]


#regex for the general cleaning algorithm:
#1 - find_all_tags
#2 - allow_valid_tags
regex_find_all_tags=(?s)(?i)</?.*?>
regex_valid_tags=(?s)(?i)</?[bpi]\\s?>|<br\\s?/?>|</?link\\s?.*?>|</?p\\s?.*?>

#replace <p> tags with <br/>?
regex_replace_p_tags=true
############################################################################
# More dxf:out END
############################################################################

