.webtv .pageTools {
    margin-bottom: 0;
}
.webtv .pageTools a {
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
}
.webtv .pageTools.article .font {
    color: #fff;
    text-transform: uppercase;
}
.webtv .pageTools.article .shareButton {
    padding-left: 0;
    border-right: 0 none;
    display: block;
}
/* share by email icon: */
.webtv .pageTools.article .shareButton .at300bs {
    float: none;
    margin: 0;
}
.webtv .pageTools .at16nc {
    background: url('/skins/publications/farsund/gfx/share-icons.png') no-repeat 0 0;
    display: block;
    height: 20px;
    width: 25px;
}
.webtv .comment-video-btn {
    background: url('/skins/publications/farsund/gfx/share-icons.png') no-repeat 0 -52px;
    line-height: 20px;
    font-size: 13px;
    color: #fafafa;
    padding-left: 34px;
    margin-bottom: 5px;
    display: block;
    cursor: pointer;
}
.webtv .comment-video-btn:hover {
    text-decoration: none;
    opacity: 0.8;
}

.webtv .addthis_button_email {
    height: 25px;
}