@import "main";

$overviewWidth: 100%;
$overviewItemHeight: 320px;
$overviewBorderColor: #B2B2B2;

.widget.classifiedBox.overview {
    clear: both;
    width: $overviewWidth;
    margin: 10px 0;

    .header {
        display: none;
    }

    .resultListBox {
        @include floatWide(left,inherit);
        clear: both;
        display: block;

        .loader {
            height: 11px;
            width: 16px;
        }

        .resultItemResultList li {
            @include floatWide(left,298px);
            height: $overviewItemHeight;
            margin: 10px 14px;
            overflow: hidden;
        }

        .resultItemLink {
            color: $trueBlack;
            text-decoration: none;
            text-shadow: none;
            width: 288px;

            .resultItemThumb {
                height: 205px;
                width: $overviewWidth;
            }
        }
    }

    .resultItemLink {
        .resultItemMeta {
            @include floatWide(left,100%);
            background: lighten($lightGray,38%);
            padding: 5px;

            .resultItemAddress {
                @include floatWide(left,150px);
                color: $trueBlack;
                font-weight: bold;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            .resultItemPrice {
                color: $trueBlack;
                float: right;
                font-size: 12pt;
                font-weight: bold;
                padding-right: 10px;
            }
        }
        .resultItemInfo {
            @include floatWide(left,100%);
            background: lighten($lightGray, 43%);
            overflow: hidden;
            min-height: 47px;
            max-height: 47px;
            padding: 5px;
        }

        .resultItemText {
            @include floatWide(left,140px);
            color: $themeBlack * 9;
            font-size: 9pt;
        }

        .resultItemLogo {
            float: right;
            margin-right: 10px;
        }
    }

    .resultListBox .pagelinks {
        @include floatWide(left,100%);
        padding: 0;
        text-align: center;
        li {
            background: $pureWhite;
            @include backgroundGradient(top,0%,100%,$pureWhite,lighten($lightGray,20%));
            border: 1px solid $overviewBorderColor;
            @include roundCorners(3px);
            @include boxShadow(0,0,1px,0,#ccc);
            display: inline-block;
            margin: 0 5px;
            text-shadow: 1px 1px 1px #aaa;

            &:hover {
                border: 1px solid #aaa;

                a {
                    color: #666;
                    cursor: pointer;
                }
            }

            &.skip {
                background: none repeat scroll 0 0 transparent;
                border: medium none;
                box-shadow: none;
            }

            &.current {
                @include backgroundGradient(top,0%,100%,#eee,#ddd);
                border: 1px solid #aaa;
            }
        }

        a {
            color: $themeBlack * 8;
            font-size: 12px;
            padding: 0 5px;
            text-decoration: none;
        }

        .current a {
            color: $themeBlack * 6;
            font-weight: bold;
            text-decoration: none;
        }
    }

    .categories {
        @include backgroundGradient(top,0%,100%,$pureWhite,#F2F2F2);
        @include floatWide(left, 100%);
        border-left-color: transparent;
        border-right-color: transparent;
        border-top: 1px solid lighten($lightGray, 25%);
        border-bottom: 1px solid lighten($lightGray, 25%);

        li {
            border: 0 none;
            display: block;
            float: left;

            a, span {
                border-left: 1px solid lighten($lightGray, 25%);
                border-right: 0;
                color: #A8A8A8;
                display: block;
                font-size: 14px;
                font-weight: bold;
                padding: 5px 10px;
                text-decoration: none;
                text-shadow: none;
            }

            span {
                color: $themeBlueIntense;
            }

            &.selected a, a:hover {
                color: $themeBlueDarken;
            }
        }

        li:nth-child(2) {
            span {
                color: #A8A8A8;
                font-weight: normal;
            }
        }
    }
}


.widget.classifiedBox.overview.blackTheme {
    width: 100%;
    margin: 10px 0;
}

.widget.classifiedBox.overview.blackTheme .pagelinks {
    display: none;
}

.widget.classifiedBox.overview.blackTheme .categories {
    display: none;
}

.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemResultList li {
    overflow: visible;
}

.widget.classifiedBox.overview.blackTheme .resultItemLink .resultItemText {
    color: #000000;
}

.widget.classifiedBox.overview.blackTheme .resultListBox {
    clear: both;
    display: block;
    float: left;
    width: inherit;
}

.widget.classifiedBox.overview.blackTheme .resultItemResultList {
    list-style-type: none;
}

.widget.classifiedBox.overview.blackTheme .resultItemResultList li {
    float: left;
    height: 250px;
    margin: 10px 14px;
    max-height: 100%;
    width: 298px;
}

.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemLogo {
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}
.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemLink {
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    color: #000000;
    float: left;
    min-height: 250px;
    position: relative;
    text-decoration: none;
    text-shadow: none;
    width: 288px;
}

.ie7 .widget.classifiedBox.overview.blackTheme .resultListBox .resultItemLink,
.ie8 .widget.classifiedBox.overview.blackTheme .resultListBox .resultItemLink {
    border: 1px solid #D2D2D2;
}


.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemName {
    color: #444444;
    float: left;
    font-size: 10px;
    font-weight: bold;
    height: 27px;
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
}

.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemPrice {
    background: none repeat scroll 0 0 #393939;
    border: 1px solid #000000;
    border-radius: 3px 3px 3px 3px;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5);
    color: #FFFFFF;
    display: block;
    font-size: 11px;
    font-weight: bold;
    padding: 2px 5px;
    position: absolute;
    right: 5px;
    top: 26px;
}

.widget.classifiedBox.overview.blackTheme.priceBadge .resultListBox .resultItemPrice {
    right: 5px;
    top: 10px;
    -moz-transform: rotate(5deg);
    -webkit-transform:rotate(5deg);
    -o-transform:rotate(5deg);
    -ms-transform:rotate(5deg);
}

.ie7 .widget.classifiedBox.overview.blackTheme .resultListBox .resultItemPrice {
    float: right;
    width: 70px;
}

.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemThumb {
    border-top: 1px solid #333333;
    width: 100%;
}

.widget.classifiedBox.overview.blackTheme .resultListBox .resultItemText {
    background-color: #FFFFFF;
    bottom: 0;
    font-size: 11px;
    left: 0;
    line-height: 1.25;
    min-height: 28px;
    padding: 2px 10px;
    position: absolute;
    white-space: normal;
    width: 268px;
}

.ie7 .widget.classifiedBox.overview.blackTheme  .resultListBox .resultItemText {
    background-color: #fff;
}

.widget.classifiedBox.overview.blackTheme .error {
    color: #FF0000;
    display: block;
    padding: 10px 0;
}