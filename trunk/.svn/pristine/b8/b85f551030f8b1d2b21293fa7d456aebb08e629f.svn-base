.pageTools.article {
    margin-bottom:20px;
    overflow:hidden;
    position:relative;
}

.pageTools.article .font {
    color:#333;
}
.pageTools.article .shareButton {
    border-right:1px solid #e8e8e8;
    display:inline-block;
    color:#333;
    font-size:9px;
    margin-right:2px;
        margin-top:3px;
    padding-left:37px;
        padding-right:2px;
    vertical-align:top;
    width:42px;
        height:29px;
}

.pageTools.article.expandable .shareButton {
    display:none;
}


.pageTools.article .addthis_button_compact,
.pageTools.article .addthis_button_print {
    width:0;
}

.pageTools.article .shareButton .at300bs {
    float:left;
    margin-left:-37px;
        margin-top:-3px;
}

.pageTools.article .fontWrapper {
    float:right;
    font-weight:bold;
        letter-spacing:-1px;
        line-height:32px;
}

#smallFont {
    font-size:12px;
}

#mediumFont {
    font-size:14px;
}

#largeFont {
    font-size:16px;
}

.addthis_default_style .at300b, .addthis_default_style .at300m {
    padding: 0 2px 4px;
}