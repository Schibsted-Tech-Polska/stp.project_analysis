<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="Frame" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${catalina.base}/logs/MobileLog.log"/>
        <param name="Threshold" value="warn"/>
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} [%t] %-5p %c - %m%n"/>
        </layout>
    </appender>   
    <root>
        <priority value="warning"/>
        <appender-ref ref="Frame"/>
    </root>
</log4j:configuration>