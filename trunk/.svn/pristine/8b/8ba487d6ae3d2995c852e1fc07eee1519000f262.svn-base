#footer {
    background-image:-moz-linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,0) 4%);
        background-image:-webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,1)), color-stop(0.04, rgba(0,0,0,0)));
        background-image:-webkit-linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,0) 4%);
        background-image:-o-linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,0) 4%);
        background-image:linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,0) 4%);
    text-align: center;
}

#footer .logo,
#footer .socialTips,
#footer .publisher {
    margin: 0 auto;
    width: 415px;
}
#footer .logo {
    padding-top: 30px;
}
#footer div,
#footer section,
#footer dl {
    padding: 15px 0;
}
#footer .social {
    padding: 0;
}
#footer .social a {
    margin-right: 20px;
}

#footer .publisher {
    padding-left: 14%;
}
#footer .publisher:before {
    display: none;
}
#footer .publisher dt {
    font-weight: bold;
}
#footer .publisher dt:first-of-type {
    display: block;
}
#footer .publisher dd {
    margin-left: 0;
}

#footer .mnoDropdown {
    text-shadow: none;
}

#footer .mnoDropdown .widget.tip dd {
    text-align: left;
}

/* screen size tweaks */
@media only screen and (max-width : 320px) {
    #footer {
        font-size: 12px;
    }
    #footer .logo {
        max-width: 200px;
    }
    #footer .socialTips,
    #footer #footerPublisher {
        max-width: 320px;
    }
}
@media only screen and (min-width : 321px) and (max-width : 600px) {
    #footer {
        font-size: 12px;
    }
    #footer .logo,
    #footer .socialTips,
    #footer #footerPublisher {
        max-width: 320px;
    }
}
@media only screen and (min-width : 601px) {
    #footer {
        max-width: 1000px;
    }
}

/* pre footer */
#preFooter .sectionMenu {
    margin: 0;
    padding-left: 0;
        padding-right: 0;
}

#preFooter .sectionTitle,
#preFooter .sectionTitle a {
    color: #009fda;
        font-family: georgia,serif;
        font-size: 16px;
        font-style: italic;
        font-weight: normal;
    padding-bottom: 0;
}
#preFooter .sectionTitle a {
    text-transform: lowercase;
}
#preFooter .sectionTitle:before {
    content: "Mer under";
    padding-left: 10px;
}

#preFooter .sectionMenu li {
    font-size: 16px;
        line-height: 15px;
    height: 16px;
    padding: 7px 15px;
}