#footer {
    clear: both;
    color: #fff;
    font-size: 11px;
    background-color: #123568;
    margin-top: 7px;
    top: 0;
}

#footer dl, #footer dd, #footer dt {
    font-size: 11px;
    padding: 0;
    margin: 0;
    width: auto;
}

#footer dt {
    padding-right: 3px;
    float: left;
}

#footer a {
    text-decoration: none;
    color: #fff;
}

#footer .colophon {
    margin: 10px;
}

#footer .colophon dt {
    font-weight: bold;
}

#footer .disclaimer {
    margin: 10px;
    padding: 0;
}