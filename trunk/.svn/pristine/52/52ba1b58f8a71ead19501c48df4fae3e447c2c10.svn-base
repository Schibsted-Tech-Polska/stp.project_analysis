.notifications.notificationList {
    border-right: 1px solid #ccc;
        border-left: 1px solid #ccc;
}

.notifications.notificationList header {
    margin: 0;
}

.notifications.notificationList a {
    padding-left: 5px;
    text-transform: uppercase;
    font-size: 10px;
    font-weight: bold;
}

.notifications.notificationList li {
    line-height: 16px;
    padding: 10px 5px;
    width: auto;
}

.notifications.notificationList li a,
.notifications.notificationList li a:visited {
    color: #000;
    font-size: 13px;
        font-weight: normal;
        text-transform: none;
    padding-left: 0;
}

.notifications.notificationList li img {
    float: left;
    margin-right: 10px;
        margin-bottom: 0;
}