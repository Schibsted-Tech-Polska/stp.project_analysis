.gridRow {width:100%;margin: 0 auto;}

.articlefront{
    border-bottom:solid 1px #ccc;
    margin-bottom:10px;
    padding-bottom:10px;
}
.sectionPage .gridRow{
    margin-bottom:0;
}

.sectionPage .gridUnit,
.gridUnit{
    border:0;
    float:none;
    margin:0;
    padding:0;
}


.gridUnit {
    -moz-box-sizing:border-box;
        -webkit-box-sizing:border-box;
        box-sizing:border-box;
    float: left;
    padding-left: 10px;
}

