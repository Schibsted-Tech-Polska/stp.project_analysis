/* forms*/
.contentSearch {
    margin-left:5px;
}

.pillBox {
    border:0 none;
}

.pillBox button,
.pillBox input,
.pillBox input:first-child, .pillBox input.first {
    border:1px solid #333;
        border-radius:5px;
    float:none;
    padding:5px 10px;
}

