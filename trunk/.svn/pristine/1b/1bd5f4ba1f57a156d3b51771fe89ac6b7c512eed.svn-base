    <field name="enableSlideshowCustom" type="boolean">
      <ui:label>Enable slidehow</ui:label>
      <ui:description>This controls how related images are shown. Either a slide show embedded in the page, or a list
        with links to each image
      </ui:description>
      <ui:boolean-label value="true">Show related teaser images as a slide show</ui:boolean-label>
      <ui:boolean-label value="false">Don't show related teaser images as a slide show</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showCaptionCustom" type="enumeration">
      <ui:label>Show caption</ui:label>
      <ui:description>Option to configure the image caption. Three valid options:
        hide will not show the caption at all
        always will always display the caption on a semi-transparent overlay on the image,
        hover will display the caption on a semi-transparent overlay on the image when mouse is hovering on the image
      </ui:description>
      <enumeration value="hover">
        <ui:label>Mouse hover</ui:label>
      </enumeration>
      <enumeration value="always">
        <ui:label>Always</ui:label>
      </enumeration>
      <enumeration value="hide">
        <ui:label>Hide</ui:label>
      </enumeration>
      <ui:value-if-unset>hover</ui:value-if-unset>
    </field>

    <field name="relatedContentHeaderCustom" type="basic" mime-type="text/plain">
      <ui:label>Header to related content</ui:label>
      <ui:description>Will create a simple header to be displayed above the related items.</ui:description>
    </field>

    <field name="showRelatedCustom" type="enumeration" multiple="true">
      <ui:label>Show related articles</ui:label>
      <ui:description>Select from which relation box to display related content. You can select multiple relation boxes.
      </ui:description>
      <enumeration value="none">
        <ui:label>None</ui:label>
        <ui:description>Will not display any related content. This is the default value if none is selected.
        </ui:description>
      </enumeration>
      <enumeration value="teaserRel">
        <ui:label>Teaser</ui:label>
        <ui:description>Display related content from the 'Related teaser' box.</ui:description>
      </enumeration>
      <enumeration value="storyRel">
        <ui:label>Story</ui:label>
        <ui:description>Display related content from the 'Related story' box.</ui:description>
      </enumeration>
      <enumeration value="pictureRel">
        <ui:label>Photo</ui:label>
        <ui:description>Display related content from the 'Related photo' box.</ui:description>
      </enumeration>
      <enumeration value="videoRel">
        <ui:label>Video</ui:label>
        <ui:description>Display related content from the 'Related video' box.</ui:description>
      </enumeration>
      <enumeration value="mediaRel">
        <ui:label>Media</ui:label>
        <ui:description>Display related content from the 'Related media' box.</ui:description>
      </enumeration>
      <ui:value-if-unset>none</ui:value-if-unset>
    </field>

    <field name="showCommentsCustom" type="boolean">
      <ui:label>Show comments</ui:label>
      <ui:description>Enabling this options adds the term "23 comments" to the headline</ui:description>
      <ui:boolean-label value="true">Show the number of comments</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the number of comments</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showSectionNameCustom" type="boolean">
      <ui:label>Show the section name</ui:label>
      <ui:description>Enabling this options will add the section name above the article</ui:description>
      <ui:boolean-label value="true">Show the section name</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the section name</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="sectionNameLinkCustom" type="boolean">
      <ui:label>Provide a link to the section</ui:label>
      <ui:description>Will make the section name,
        which will be displayed if 'Show the section name' is turned on,
        clickable and create a link to that section.
      </ui:description>
      <ui:boolean-label value="true">Create section link</ui:boolean-label>
      <ui:boolean-label value="false">Don't create a section link</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="sectionNamePrefixCustom" type="basic" mime-type="text/plain">
      <ui:label>Prefix for the section name</ui:label>
      <ui:description>String containing prefix text for the section Name. If not provided no prefix will be displayed.
      </ui:description>
    </field>
  </field-group>

  <field-group name="stories-widget-advanced-fields">
    <field name="sectionUniqueName" type="basic" mime-type="text/plain">
      <ui:label>Section Unique Name</ui:label>
      <ui:description>Section uniquename of the section the widget will look into for a group with content to be
        displayed in the widget.
        Setting this parameter will override the default current section.
      </ui:description>
    </field>

    <field name="includeSubsections" type="boolean">
      <ui:label>Include Subsections</ui:label>
      <ui:description>If the source for the stories widget is automatic, this field will decide if we use subsections or
        not.
      </ui:description>
      <ui:boolean-label value="true">Include subsections if the source is automatic</ui:boolean-label>
      <ui:boolean-label value="false">Don't include subsections</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="listSort" type="enumeration">
      <ui:label>Automatic List sorting</ui:label>
      <ui:description>If the source for the stories widget is automatic, this will decide if we sort by publish date or
        last modified date.
      </ui:description>
      <enumeration value="publishDate">
        <ui:label>Publish Date (newest first)</ui:label>
      </enumeration>
      <enumeration value="lastModifiedDate">
        <ui:label>Last Modified Date (newest first)</ui:label>
      </enumeration>
      <enumeration value="+publishDate">
        <ui:label>Publish Date (oldest first)</ui:label>
      </enumeration>
      <enumeration value="+lastModifiedDate">
        <ui:label>Last Modified Date (oldest first)</ui:label>
      </enumeration>
      <ui:value-if-unset>publishDate</ui:value-if-unset>
    </field>

    <field name="contentType" type="basic" mime-type="text/plain">
      <ui:label>Content type</ui:label>
      <ui:description>Specify the name of the content type that the widget will use.
        Can be multiple content types, comma separated. Other content types will be ignored by the widget.
      </ui:description>
    </field>

    <field name="imageVersion" type="basic" mime-type="text/plain">
      <ui:label>Image representation</ui:label>
      <ui:description>Name of the image representation to be used.</ui:description>
      <ui:value-if-unset>w140</ui:value-if-unset>
    </field>

    <field name="softCrop" type="boolean">
      <ui:label>Soft cropping</ui:label>
      <ui:description>Defines if the widget should use the the original uncropped image or
        if the widget should ise a cropped image.
        Cropped images are recommended for full width images.
        Original image is recommended for portrait image
      </ui:description>
      <ui:boolean-label value="true">Use cropped image</ui:boolean-label>
      <ui:boolean-label value="false">Use original image</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="linkBehaviour" type="enumeration">
      <ui:label>Link clicked behaviour</ui:label>
      <ui:description>Defines the the behaviour of user click on article title, can goto article page or article's home
        section page
      </ui:description>
      <enumeration value="articlePage">
        <ui:label>Show article page</ui:label>
      </enumeration>
      <enumeration value="sectionPage">
        <ui:label>Show home section page</ui:label>
      </enumeration>
      <ui:value-if-unset>articlePage</ui:value-if-unset>
    </field>
  </field-group>

  <!--content type definitions -->
  <!-- content type for section stories widget -->
  <content-type name="widget_stories">
    <ui:icon>generic</ui:icon>
    <ui:label>Stories Widget</ui:label>
    <ui:description>A widget that produces a list of stories in a section</ui:description>
    <ui:title-field>title</ui:title-field>

    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>General configuration of the widget</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="stories-widget-general-fields"/>
    </panel>

    <panel name="default">
      <ui:label>Default</ui:label>
      <ui:description>Configuration of the default view</ui:description>
      <ref-field-group name="stories-widget-default-fields"/>
    </panel>

    <panel name="headline">
      <ui:label>Headline</ui:label>
      <ui:description>Configuration of the headline view</ui:description>
      <ref-field-group name="stories-widget-headline-fields"/>
    </panel>

    <panel name="topstory">
      <ui:label>Top Story</ui:label>
      <ui:description>Configuration of the top story view</ui:description>
      <ref-field-group name="stories-widget-topstory-fields"/>
    </panel>

    <panel name="newsletter">
      <ui:label>Newsletter</ui:label>
      <ui:description>Configuration of the newsletter view</ui:description>
      <ref-field-group name="stories-widget-newsletter-fields"/>
    </panel>

    <panel name="custom">
      <ui:label>Custom</ui:label>
      <ui:description>Configuration of the custom view</ui:description>
      <ref-field-group name="stories-widget-custom-fields"/>
    </panel>

    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="stories-widget-advanced-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>

    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-public-fields"/>
    </panel>

    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>