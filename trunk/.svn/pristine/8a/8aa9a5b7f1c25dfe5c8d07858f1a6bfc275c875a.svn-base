.mobileNavigators .navigator {
    position:relative;
}

.mobileNavigators .toggle {
    background:#000;
    color:#fff;
    display:block;
    padding:5px;
}

.mobileNavigators .toggle:hover {
    text-decoration:none;
}

.mobileNavigators .toggle:after {
    content:"\025BC";
    float:right;
}

.mobileNavigators .toggle.active:after {
    content:"\025B2";
    float:right;
}

.mobileNavigators li {
    cursor:pointer;
    width:100%;
}

.mobileNavigators .drilldown,
.mobileNavigators ul ul li {
    background:#fff;
    background-image:-moz-linear-gradient(top, transparent, rgba(0,0,0,.1));
        background-image:-webkit-linear-gradient(top, transparent, rgba(0,0,0,.1));
        background-image:linear-gradient(top, transparent, rgba(0,0,0,.1));
    border-bottom:1px solid #ccc;
    display:block;
    padding:5px;
}

.mobileNavigators strong:after {
    content: "\025BA";
    float:right;
}

.mobileNavigators ul ul {
    position:absolute;
        top:0;
        left:100%;
    overflow-x:hidden;
    overflow-y:auto;
    width:100%;
        height:100%;
}

.mobileNavigators .remove {
    color:#000;
    display:block;
    margin-top:5px;
}

.mobileNavigators .remove span {
    background:#ccc;
    background-image:-moz-linear-gradient(top, #f0f0f0, #ccc);
        background-image:-webkit-linear-gradient(top, #f0f0f0, #ccc);
        background-image:linear-gradient(top, #f0f0f0, #ccc);
    border:1px solid #999;
        -moz-border-radius:10px;
    -moz-box-shadow:0 1px 2px #ccc;
    color:#000;
    display:inline-block;
    font-family:"Arial Black", Arial,sans-serif;
        font-size:13px;
        font-weight:bold;
    line-height:18px;
    margin-right:5px;
    text-align:center;
    text-shadow:0 1px 1px #fff;
    width:18px;
        height:18px;
}

.mobileNavigators .remove:hover {
    text-decoration:none;
}