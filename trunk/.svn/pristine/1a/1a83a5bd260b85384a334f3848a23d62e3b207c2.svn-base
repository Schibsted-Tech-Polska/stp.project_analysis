#header {
    background:#fff;
}

#header .headerTopRow {
    height:60px;
    overflow:hidden;
    padding:15px 0 10px 0;
    position:relative;
}

#header .gridRow {
    margin-top:0;
}

#header .gridRow.headerTopRow.energi .gridUnit.span6{ /*quick fix; padding in energy header cause to little space for grid elements*/
    margin-left: 0;
}

#header .forceMinHeight {
    min-height:60px;
}
/* Energi header */
#header .headerTopRow.energi {
    height: auto;
    padding: 5px 0 5px 0;
        filter:  progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#00000000', endColorstr='#10000000');
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#00000000', endColorstr='#10000000')";
        background-image: -moz-linear-gradient(top, rgba(70,70,70,0.0), rgba(70,70,70,.1)); /* FF3.6 */
        background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, rgba(70,70,70,0)),color-stop(1, rgba(70,70,70,.1)));
        background-image: -webkit-linear-gradient(top, rgba(70,70,70,0), rgba(70,70,70,.1));
        background-image: linear-gradient(top, rgba(70,70,70,0), rgba(70,70,70,.1));
}
#header .energiHeaderArticle {
    width: 815px;
    height: 58px;
    background: #001A41;
    margin: 13px 0 0 5px;
    -webkit-border-top-left-radius: 5px;
    -webkit-border-bottom-left-radius: 5px;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-bottomleft: 5px;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}
#header .energiHeaderArticle .comment {
    float: right;
    width: 300px;
    background-color: #000;
}