.code.folk {
    background:#f9f9f9;
    border:1px solid #d9d9d9;
        border-radius:3px;
    padding:7px 10px 10px;
}

.code.folk .header {
    background:none;
    border-bottom:1px solid #d9d9d9;
    box-shadow: none;
    height:auto;
    margin:0 0 10px -10px;
    overflow: hidden;
    padding:0 10px 5px;
    width:100%;
}

.code.folk .header h2{
    background:none;
    color:#666;
    font-size:16px;
        font-weight:normal;
        line-height: 25px;
    margin:0;
}
.code.folk .header h2 span {
    color:#123466;
    font-weight:bold;
}

.code.folk .header .button {
    background-color:#eee;
    border-color:#999;
    box-shadow: none;
    color:#333;
    padding:0 10px;
    text-shadow: 0 1px 0 rgba(255,255,255,.5);
}

.code.folk .button {

}

.code.folk img {
    background: #fff;
    border:1px solid #ccc;
    box-shadow:1px 2px 5px rgba(0,0,0,.1);
    display:block;
    padding:5px;
    -moz-transform:rotate(1deg);
        -webkit-transform:rotate(1deg);
        transform:rotate(1deg);

}

