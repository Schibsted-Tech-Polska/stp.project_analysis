<ul class="content articleList zebra"  style="height:${listHeight};">
{{each response}}
    {{if author && message && thread && createdAtTime}}
    <li>
        <div class="message">
            <a href="${author.profileUrl}" target="_blank" class="imageLeft"><img src="${author.avatar.cache}"/></a>
            <h2 class="inlineHeader"><a href="${author.profileUrl}" target="_blank">{{html author.name}}</a></h2>
            <p>{{html message}}</p>
            {{if (message.length > 200)}}
                <span class="ellipsisOverflow">(...)</span>
            {{/if}}
            <p class="postInfo ellipsis">
                <a href="${url}">{{html thread.title}}</a> <span class="f-small">({{html createdAtTime}})</span>
            </p>
        </div>
    </li>
    {{/if}}
{{/each}}
</ul>