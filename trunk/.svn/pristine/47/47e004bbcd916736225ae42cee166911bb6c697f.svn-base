.widget.livestudio.headline {
    -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    color: #333;
    display: none;
    float: left;
    margin: 10px 0;
    width: 100%;
    word-wrap: break-word;
}

.ie7 .widget.livestudio.headline {
    padding-right: 0;
}

.widget.livestudio.headline q {
    -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    color: #999;
    display: block;
    float: none;
    margin: 10px 0;
}