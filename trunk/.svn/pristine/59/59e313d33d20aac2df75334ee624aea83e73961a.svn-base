}

/* smallHeader */
.smallHeader {
    background-color: #051d37;
    border-bottom: 0 none;
    -moz-box-shadow: 0 0 15px #051d37;
        -webkit-box-shadow: 0 0 15px #051d37;
        box-shadow: 0 0 15px #051d37;
    padding: 0;
}

.smallHeader .logo {
    padding: 5px 10px 7px 0 !important;
}

.smallHeader a {
    color: #fff;
        font-family: "Myriad Web Pro", Arial, sans-serif;
}

/* screen size */
@media only screen and (min-device-width : 600px) and (max-device-width : 1024px) {
    #header .mainHeader .stories {
        display: none;
    }
}

/* From global header */


#header .widget {
    margin-top:0;
}

@media all and (min-width:641px) {
    #header .mainHeader .grid12 {
        height:75px;
        height:4.6875rem;
    }
}

.scrollUp #header .mainHeader {
    position:fixed;
    top: 0;
    left:0;
    right:0;
    z-index:2000;
}

.frontpage #header .grid12 {
    height: 2.8135rem;
    text-align: center;
}

@media all and (min-width:641px) {
    #header .mainHeader .grid12 {
        height:75px;
        height:4.6875rem;
    }
}

#header .grid12:before {
    content: ' ';
    display:inline-block;
    height:100%;
    vertical-align: middle;
}

@media screen and (max-width:640px) {
    #header .mainHeader .grid12 {
        display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
        display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
        display: -ms-flexbox;      /* TWEENER - IE 10 */
        display: -webkit-flex;     /* NEW - Chrome */
        display: flex;             /* NEW, Spec - Opera 12.1, Firefox 20+ */
        -moz-flex-align: stretch;
            -ms-flex-align: stretch;
        -webkit-flex-align: stretch;
            -moz-box-pack: justify;
            -ms-box-pack: justify;
            -webkit-box-pack: justify;
        -moz-flex-wrap: nowrap;
            -ms-flex-wrap: nowrap;
            -webkit-flex-wrap: nowrap;
            flex-wrap: nowrap;
        -webkit-align-items:center;
            -moz-align-items:center;
            align-items:center;
        width:100%;
    }
}