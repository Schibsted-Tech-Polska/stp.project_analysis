/* dateline */
#header .dateline {
    color: #e1e1e1;
        font-family: "Myriad Web Pro", Arial, sans-serif;
        font-size: 13px;
    margin-left: 70px;
    position: absolute;
        top: 10px;
}

/* weather */
body #header .nowForecastForHeader {
    margin-left: 235px;
    position: absolute;
        top: 0;
}
body #header .nowForecastForHeader .temp {
    color: #fff !important;
        font-family: "Myriad Web Pro", Arial, sans-serif;
        font-size: 16px !important;
        font-weight: normal !important;
}
body #header .nowForecastForHeader .sted {
    display: none;
}

/* indicators */
#header .indicators {
    color: #fff;
        font-family: "Myriad Web Pro", Arial, sans-serif;
        font-size: 10px;
    line-height: 10px;
    margin-left: -20px;
    position: absolute;
        top: 5px;
}

#header .indicators a,
#header .indicators a:hover {
    color: #fff;
}

#header .indicators div {
    background-image: url(/skins/publications/sa/gfx/icons/sprite_indicators.png);
        background-repeat: no-repeat;
    float: left;
    height: 21px;
    margin-right: 5px;
    padding-left: 25px;
}
#header .indicators .index {
    background-position: 0 -42px;
}
#header .indicators .currency {
    background-position: 0 0;
}
#header .indicators .commodity {
    background-position: 0 -21px;
}

#header .indicators span {
    display: inline-block;
}

#header .indicators .name {
    font-weight: bold;
}

#header .indicators .last {
    display: block;
    font-size: 16px;
}

/* stories */
#header .mainHeader .stories {
    max-height: 107px;
    overflow: hidden;
}

.ie #header .breakingnews {
    margin-bottom: 0;
}

/* tip */
#header .tip {
    font-size: 12px;
    margin: 2px 0;
}

#header a.tip,
#header .tip a {
    font-weight: bold;
}

