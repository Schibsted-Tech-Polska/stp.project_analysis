#header {
    /*border-bottom: 1px solid #051d37;*/
    /*margin: 0 0 5px;*/
    /*padding: 0;*/
    /*width: 100%;*/

    height:90px;
    height:5rem;
    padding:0;
    margin-left:0;
    margin-top:0 !important; /* overwrite tabletQuickFix*/
    width:auto;
}

@media handheld, only screen and (max-device-width: 480px) {
    #header {
        margin-bottom: 0 !important; /* FIX-1543 */
    }
}

@media all and (max-width: 640px) {
    #header {
        height: 2.8125rem;
    }
}

#header .gridRow {
    margin-bottom: 2px;
        margin-top: 2px;
}

#header .mainHeader {
    background-color: #003366;
    position:static;
        top:0;
        left:0;
        right:0;
        z-index:1000;
    width:100%;
    -moz-transition: left 450ms ease-in-out, right 450ms ease-in-out;
        -webkit-transition: left 450ms ease-in-out, right 450ms ease-in-out;
        transition: left 450ms ease-in-out, right 450ms ease-in-out;
    /*height: 107px;*/
}

.scrollUp #header .mainHeader {
    position:fixed;
}

.nojs .offCanvas.offCanvasDefault:checked ~ #surround .mainHeader,
.offCanvasChecked #surround .mainHeader {
    -moz-transition: left 150ms ease-in-out, right 150ms ease-in-out;
    -webkit-transition: left 150ms ease-in-out, right 150ms ease-in-out;
    transition: left 150ms ease-in-out, right 150ms ease-in-out;
}

.nojs .offCanvas.offCanvasDefault.left:checked ~ #surround .mainHeader,
.offCanvasChecked.offCanvas-left #surround .mainHeader {
    left : 80%;
    right: -80%;
}

.nojs .offCanvas.offCanvasDefault.right:checked ~ #surround .mainHeader,
.offCanvasChecked.offCanvas-right #surround .mainHeader {
    right : 80%;
    left:-80%;
}

@media all and (min-width:768px) {
    .nojs .offCanvas.offCanvasDefault.left:checked ~ #surround .mainHeader,
    .offCanvasChecked.offCanvas-left #surround .mainHeader {
        left : 20rem;
        right : -20rem;
    }

    .nojs .offCanvas.offCanvasDefault.right:checked ~ #surround .mainHeader,
    .offCanvasChecked.offCanvas-left #surround .mainHeader {
        right : 20rem;
        left : -20rem;
    }
}

