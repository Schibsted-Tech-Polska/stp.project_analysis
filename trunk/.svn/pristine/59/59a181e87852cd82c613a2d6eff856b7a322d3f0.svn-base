#page .mobileStoryContent [role=tablist] {
    padding-left:5px;
    border-bottom:  1px solid #999;
}

.mobileStoryContent [role=tabpanel] {
    border:  0 none;
}

.mobileStoryContent #disqus_thread {
    margin-top:0;
}

.mobileStoryContent .inline-image .caption {
    background:#333;
    color:#fff;
    font-size:10px;
    margin-bottom:5px;
    padding:5px;
}

.mobileStoryContent .inline-image .caption h2 {
    font-size:12px;
    margin-bottom:0;
}

.mobileStoryContent .inline-image .caption p {
    margin:0;
}

.mobileStoryContent .inline-image .caption .credits {
    display:block;
}

div[role="tabpanel"], section[role="tabpanel"] {
    -moz-box-shadow: 0 0 0 rgba(0, 0, 0, .3 );
    -webkit-box-shadow: 0 0 0 rgba(0, 0, 0, .3);
    box-shadow: 0 0 0 rgba(0, 0, 0, .3);
    top:2px;
}

li[role="tab"] {
    background-color: #E0E0E0;
    height: 25px;
}

/* reviewFields */
.reviewFields {
    border-bottom: 1px solid #f4f4f4;
        border-top: 1px solid #f4f4f4;
    padding: 10px 0;
        margin: 10px 0;
}

.reviewFields dl {
    display: inline-block;
    width: 90%;
}

.reviewFields dt,
.reviewFields dd {
    display: inline-block;
}
.reviewFields dt {
    width: 30%;
}
.reviewFields dd {
    font-weight: bold;
    width: 55%;
}

.reviewFields .reviewScore {
    vertical-align: top;
}

.mobileStoryContent .docLink {
    display: inline-block;
    position: relative;
    top: 7px;
    overflow:hidden;
    padding-left:25px;
    padding-bottom: 25px;
}

.mobileStoryContent .docLink.pdf {
    background:url(/skins/global/gfx/icons/doc_sprite_25.png) no-repeat 0px -49px;
}

.mobileStoryContent .docLink.pptx {
    background:url(/skins/global/gfx/icons/doc_sprite_25.png) no-repeat 0px -73px;
}

.mobileStoryContent .docLink.docx, .docLink.doc {
    background:url(/skins/global/gfx/icons/doc_sprite_25.png) no-repeat 0px -0px;
}

.mobileStoryContent .docLink.xls, .docLink.xlt {
    background:url(/skins/global/gfx/icons/doc_sprite_25.png) no-repeat 0px -25px;
}