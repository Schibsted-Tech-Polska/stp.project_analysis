<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!--Field group definitions for SEO widget -->
  <field-group name="seo-widget-basic-fields">
    <field name="keywords" type="basic" mime-type="text/plain">
      <ui:label>Meta Keywords</ui:label>
      <ui:description>Specify the keywords used in HTML Head Meta (keywords) tag</ui:description>
    </field>
    <field name="description" type="basic" mime-type="text/plain">
      <ui:label>Meta Description</ui:label>
      <ui:description>Specify the description used in HTML Head Meta (description) tag</ui:description>
    </field>
  </field-group>

  <field-group name="seo-widget-view-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>View used to render the widget</ui:description>
      <enumeration value="default">
        <ui:label>Default</ui:label>
      </enumeration>
      <enumeration value="custom">
        <ui:label>Custom</ui:label>
      </enumeration>
      <ui:value-if-unset>default</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="seo-widget-section-parameters-fields">
    <field name="meta" type="complex">
      <ui:label>Meta</ui:label>
      <complex>
        <field mime-type="text/plain" type="basic" name="name">
          <ui:label>Name</ui:label>
          <ui:description>The name attribute of the Meta tag</ui:description>
        </field>
        <field mime-type="text/plain" type="basic" name="content">
          <ui:label>Content</ui:label>
          <ui:description>The content attribute of the Meta tag</ui:description>
        </field>
      </complex>
      <array default="0"/>
    </field>
  </field-group>

  <!--content type definition for SEO Widget -->
  <content-type name="widget_seo">
    <ui:label>SEO Widget</ui:label>
    <ui:description>
      This widget can be used for adding SEO related information to the section or article page.
      Currently, this widget adds two meta tags to the head tag of the page i.e. meata(keywords) and meta(description).
      This widget contains two text fields for these tags. You can add static text and bean properties in the format e.g.
      Our site now have [section.name] section for entertainment,
      or [article.title] and [article.fields.leadtext.value] is a long summary of today's match.
      Everything inside the square brackets [] is considered a bean property. Please remember that bean property must
      return a string value.
    </ui:description>
    <ui:title-field>title</ui:title-field>
    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The basic configuration fields</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="seo-widget-view-fields"/>
    </panel>
    <panel name="default">
      <ui:label>Default</ui:label>
      <ui:description>This panel contains fields which are used in default view</ui:description>
      <ref-field-group name="seo-widget-basic-fields"/>
    </panel>
    <panel name="custom">
      <ui:label>Custom</ui:label>
      <ui:description>This panel contains fields for specifying section parameters keywords and description meta tags
      </ui:description>
      <ref-field-group name="seo-widget-section-parameters-fields"/>
    </panel>
    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-public-fields"/>
    </panel>
    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>