.popularList.mostSharedHorizontal {
    border-top: 2px solid #ccc;
        border-bottom: 2px solid #ccc;
    color:#000;
    overflow: hidden;
    margin-bottom:10px;
    padding: 5px;
    position:relative;
}

.popularList.mostSharedHorizontal h2 {
    font-size:16px;
    margin-bottom:0;
}

.popularList.mostSharedHorizontal article {
    border-left: 1px solid #ccc;
    float:left;
    margin-bottom:0;
    padding: 0 4px;
    width:213px;
}

.popularList.mostSharedHorizontal a {
    color:#000;
}

.popularList.mostSharedHorizontal img {
    float:left;
    margin-right:5px;
}

.popularList.mostSharedHorizontal header {
    float:left;
    margin-bottom:0;
    width:80px;
}

.popularList.mostSharedHorizontal header h2 {
    color:#000;
    font-size:30px;
}
