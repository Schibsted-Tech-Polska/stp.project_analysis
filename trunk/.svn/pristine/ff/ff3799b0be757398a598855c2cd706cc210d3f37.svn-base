#header .weather.default {
    position:relative;
        top:10px;
    text-align: left;
}

#header .weather.default .weatherTitle:after {
    content:'&nbsp;&gt;&gt;';
}

.weather.default a {
    float: left;
    font-size:10px;
        color:#999;
    text-align: left;
}

.weather.default .weather-today,
.weather.default .weather-tomorrow {
    padding-left:4px;
}

.weather.default .weather-symbol {
    color: #007AA6;
    font-size: 12px;
    font-weight: bold;
}

#header .weather.default .weather-symbol {
    display:block
}

.weather.default .weather-symbol.warm {
    color: #990000;
}
.weather.default a {
    display:none;
}

#header .weather.default a,
.weather-today,
.weather-tomorrow {
    display:block;
}

.weatherSectionElement {
    margin-left: 10px;
        margin-top: -4px;
}

/* table */
.weather th,
.weather.articleLongtermForecast th {
    background: #ccc;
    filter:  progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#cccccc', endColorstr='#999999');
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#cccccc', endColorstr='#999999')";
        background-image: -moz-linear-gradient(top, #ccc 85%, #999);
        background-image: -webkit-gradient(linear, left top,left bottom, color-stop(0.85, #ccc), color-stop(1, #999));
        background-image: -webkit-linear-gradient(top, #ccc 85%, #999));
        background-image: linear-gradient(top, #ccc 85%, #999);
    border-right: 1px solid #999;
    border-bottom: 1px solid #999;
    color: #000;
        font-weight: bold;
}
.weather.articleLongtermForecast th.corner {
    background: #fff;
}

.weather.articleLongtermForecast td {
    border: 1px solid #c2c2c2;
        border-left: 0 none;
        border-top: 0 none;
}
.weather.articleLongtermForecast tr {
    background:#fff;
}
.weather.articleLongtermForecast tr:nth-of-type(odd) {
    background:#f6f6f6;
}

/* form */
.weatherSearch .pillBox button:before {
    content: ' ';
    background: url(/skins/publications/ap/gfx/sprite_2.png) 5px -196px no-repeat;
    display: block;
    width: 30px;
        height: 20px;
}
.weatherSearch .pillBox button {
    background-color: #4a4a4a;
        filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#00000000', endColorstr='#FF000000');
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr='#00000000', endColorstr='#FF000000')";
        background-image: -moz-linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,1));
        background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0, rgba(0,0,0,0)),color-stop(1, rgba(0,0,0,1)));
        background-image: -webkit-linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,1));
        background-image: linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,1));
    border-color: #000;
    text-indent: -9999px;
}

/* footer/disclaimer */
.weather footer {
    font-size: 12px;
    line-height: 1.2;
    margin-top: 10px;
}
.weather footer span {
    color: #888;
        text-align: right;
    float: right;
}

.weather footer a {
    border-right: 0 none;
    margin-right: 0;
    padding-right: 0;
}