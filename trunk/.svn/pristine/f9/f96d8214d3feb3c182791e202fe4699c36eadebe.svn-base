<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <field-group name="menu-general-fields">
    <field type="enumeration" name="view">
      <ui:label>View</ui:label>
      <ui:description>This option is used to set the orientation of the menu, either horizontal or vertical.
      </ui:description>
      <enumeration value="horizontal">
        <ui:label>Horizontal Menu</ui:label>
      </enumeration>
      <enumeration value="vertical">
        <ui:label>Vertical Menu</ui:label>
      </enumeration>
      <enumeration value="newsletter">
        <ui:label>Horizontal Newsletter Menu</ui:label>
      </enumeration>
      <enumeration value="submenu">
        <ui:label>Submenu</ui:label>
      </enumeration>
      <enumeration value="menuNode">
        <ui:label>Menu Node</ui:label>
      </enumeration>
      <enumeration value="menuItem">
        <ui:label>Menu Item</ui:label>
      </enumeration>
      <ui:value-if-unset>horizontal</ui:value-if-unset>
    </field>
    <field type="basic" mime-type="text/plain" name="menuName">
      <ui:label>Menu Name</ui:label>
      <ui:description>The name of the menu-tree created in Menu editor</ui:description>
    </field>
    <field type="basic" mime-type="text/plain" name="menuTitle">
      <ui:label>Menu title</ui:label>
      <ui:description>The title of the menu</ui:description>
    </field>
  </field-group>

  <field-group name="menu-horizontal-fields">
    <field type="number" name="menuDepthHorizontal">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsHorizontal">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="menu-vertical-fields">
    <field type="number" name="menuDepthVertical">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsVertical">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="menu-newsletter-fields">
    <field type="number" name="menuDepthNewsletter">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsNewsletter">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="menu-submenu-fields">
    <field type="number" name="menuDepthSubmenu">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsSubmenu">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
    <field name="submenuItems" type="enumeration">
      <ui:label>Menu levels included</ui:label>
      <ui:description>The items that will be displayed in the submenu, relative to the current item</ui:description>
      <enumeration value="-1,1">
        <ui:label>Parent level, current level and child level</ui:label>
      </enumeration>
      <enumeration value="-1,0">
        <ui:label>Parent level and current level</ui:label>
      </enumeration>
      <enumeration value="0,1">
        <ui:label>Current level and child level</ui:label>
      </enumeration>
      <enumeration value="-1,-1">
        <ui:label>Only parent level</ui:label>
      </enumeration>
      <enumeration value="0,0">
        <ui:label>Only current level</ui:label>
      </enumeration>
      <enumeration value="1,1">
        <ui:label>Only child level</ui:label>
      </enumeration>
    </field>
    <field name="showAncestors" type="boolean">
      <ui:label>Display ancestor path</ui:label>
      <ui:boolean-label value="true">Display ancestor path</ui:boolean-label>
      <ui:boolean-label value="false">Do not display ancester path</ui:boolean-label>
      <ui:description>Set this option to display the ancestor menu items up to the parent of the current item.
      </ui:description>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

  <field-group name="menu-menuNode-fields">
    <field type="number" name="menuDepthMenuNode">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsMenuNode">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
    <field name="menuNode" type="enumeration">
      <ui:label>Menu Node</ui:label>
      <ui:description>The node that will be displayed relative to the current node</ui:description>
      <enumeration value="current">
        <ui:label>Current</ui:label>
      </enumeration>
      <enumeration value="parent">
        <ui:label>Parent</ui:label>
      </enumeration>
      <enumeration value="next">
        <ui:label>Next</ui:label>
      </enumeration>
      <enumeration value="previous">
        <ui:label>Previous</ui:label>
      </enumeration>
    </field>
    <field name="label" type="basic" mime-type="text/plain">
      <ui:label>Menu Node Label</ui:label>
      <ui:description>Use the label to render a custom label instead of the menu node text</ui:description>
    </field>
  </field-group>

  <field-group name="menu-menuItem-fields">
    <field type="number" name="menuDepthMenuItem">
      <ui:label>Menu depth</ui:label>
      <ui:description>Set the depth of the menu to how many levels to include.</ui:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>10</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>2</ui:value-if-unset>
    </field>
    <field type="enumeration" name="displayItemsMenuItem">
      <ui:label>Display Items</ui:label>
      <ui:description>Specify which of the items to include in the menu.</ui:description>
      <enumeration value="active">
        <ui:label>Active Subitems</ui:label>
      </enumeration>
      <enumeration value="all">
        <ui:label>All Subitems</ui:label>
      </enumeration>
      <ui:value-if-unset>active</ui:value-if-unset>
    </field>
    <field name="linkText" type="basic" mime-type="text/plain">
      <ui:label>Link Text</ui:label>
      <ui:description>Link text for the menu item</ui:description>
    </field>
    <field name="reference" type="enumeration">
      <ui:field>Reference</ui:field>
      <ui:description>This field determines what the menu item will point to</ui:description>
      <enumeration value="sectionUniqueName">
        <ui:label>Section Unique Name</ui:label>
      </enumeration>
      <enumeration value="url">
        <ui:label>URL</ui:label>
      </enumeration>
      <enumeration value="articleId">
        <ui:label>Article Id</ui:label>
      </enumeration>
      <ui:value-if-unset>sectionUniqueName</ui:value-if-unset>
    </field>
    <field name="sectionUniqueName" type="basic" mime-type="text/plain">
      <ui:label>Section Unique Name</ui:label>
      <ui:description>The unique name of the section which the menu item will point to</ui:description>
    </field>
    <field name="url" type="uri">
      <ui:label>URL</ui:label>
      <ui:description>The URL which the menu item will point to</ui:description>
    </field>
    <field name="articleId" type="number">
      <ui:label>Article Id</ui:label>
      <ui:description>The id of the article which the menu item will point to</ui:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>######</format>
    </field>
  </field-group>

  <field-group name="menu-advanced-fields">
    <field name="updateInterval" type="number">
      <ui:label>Update Interval (Minutes)</ui:label>
      <ui:description>Update interval for menu in minutes</ui:description>
      <format>##</format>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <ui:value-if-unset>60</ui:value-if-unset>
    </field>
  </field-group>
  <!-- define menu widget content-type -->
  <content-type name="widget_menu">
    <ui:icon>generic</ui:icon>
    <ui:label>Menu Widget</ui:label>
    <ui:description>A widget for displaying menu using MenuEditor plugin</ui:description>
    <ui:title-field>title</ui:title-field>

    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The fields for configuring the menu</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="menu-general-fields"/>
    </panel>

    <panel name="horizontal">
      <ui:label>Horizontal Menu</ui:label>
      <ui:description>Horizontal menu configuration fields</ui:description>
      <ref-field-group name="menu-horizontal-fields"/>
    </panel>

    <panel name="vertical">
      <ui:label>Vertical Menu</ui:label>
      <ui:description>Vertical menu configuration fields</ui:description>
      <ref-field-group name="menu-vertical-fields"/>
    </panel>

    <panel name="newsletter">
      <ui:label>Horizontal Newsletter Menu</ui:label>
      <ui:description>Horizontal newsletter menu configuration fields</ui:description>
      <ref-field-group name="menu-newsletter-fields"/>
    </panel>

    <panel name="submenu">
      <ui:label>Submenu</ui:label>
      <ui:description>The submenu configuration fields</ui:description>
      <ref-field-group name="menu-submenu-fields"/>
    </panel>

    <panel name="menuNode">
      <ui:label>Menu Node</ui:label>
      <ui:description>The menu node configuration fields</ui:description>
      <ref-field-group name="menu-menuNode-fields"/>
    </panel>

    <panel name="menuItem">
      <ui:label>Menu Item</ui:label>
      <ui:description>The configuration fields for menuItem view</ui:description>
      <ref-field-group name="menu-menuItem-fields"/>
    </panel>

    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration fields</ui:description>
      <ref-field-group name="menu-advanced-fields"/>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>

    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-public-fields"/>
    </panel>

    <summary>
      <ui:label>Summary</ui:label>
      <field type="basic" mime-type="text/plain" name="title">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>