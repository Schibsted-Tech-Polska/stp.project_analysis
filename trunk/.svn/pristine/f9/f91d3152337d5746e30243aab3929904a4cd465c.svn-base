.feed .content {
    clear: both;
}

.feed footer {
    font-size:12px;
    line-height:1;
    overflow:hidden;
    width:100%;
}

.feed footer a {
    margin-bottom:0;
}

.feed .category {
    color:#888;
}

.feed footer .category {
    text-transform:capitalize;
    float:left;
        margin-right:3px;
}

.feed footer .category:after {
    content:":";
}

/* E24 feed css */
.e24energiContainer header{
    background-color: #cd181f;
}
.e24energiContainer header h2 a {
    color: #cd181f;
}

.e24energiContainer li {
    clear: both;
}

.e24energiContainer .gridUnit {
    margin-bottom: 10px;
}

.e24energiContainer img,
.e24energiContainer .span1 {
    width: 100px;
}
.e24energiContainer .span3 {
    width: 260px;
}