.notiemobile #header {
    margin-bottom:10px;
    /*margin-left: -8px;*/
    /*padding-left: 8px;*/
    /*border-radius: 8px 0 0 8px;*/
    /*box-shadow: -2px 2px 6px 1px rgba(0,0,0,.75);*/
}
/* logo */
#header .widget.logo {
    float: left;
    height: auto;
    padding: 14px 0 10px;
}
#header .widget.logo img {
    margin: 0;
    width: 235px;
}

/* weather */
#header .nowForecastForHeader {
    float: right;
    height: 55px;
    line-height: 55px;
    margin: 0 !important;
    position: relative;
}
#header .nowForecastForHeader .temp {
    line-height: 50px !important;
}
#header .nowForecastForHeader .weather-icon {
    margin: 0 !important;
}
#header .nowForecastForHeader .sted {
    display: none;
}

#header .widget.logo img {
    margin-left: 10px;
}

/* paywall buttons */
.mobilePaywallMenu {
    background-color: #7a9eb7;
    box-shadow: 0 -1px 0 0 rgb(60,115,150);
    border-top: 1px solid rgb(191,190,190);
}
.mobilePaywallMenu .sideMenuTrigger,
.mobilePaywallMenu a.userAccount,
.mobilePaywallMenu .storedArticlesTrigger > a,
.mobilePaywallMenu .tipsoss > a {
    display: block;
    margin: 0 auto;
    width: 30px;
}
.mobilePaywallMenu .sideMenuTrigger,
.mobilePaywallMenu .loginDialogs,
.mobilePaywallMenu .storedArticlesTrigger,
.mobilePaywallMenu .tipsoss {
    float: left;
    max-width: 20%;
    width: 60px;
    border-right: 1px solid #477da2;
    box-shadow: 1px 0 0 0px #d2d3d5;
    text-align: center;
}

.mobilePaywallMenu .text,
.mobilePaywallMenu .tipsoss span {
    display: block;
    width: 28px;
    padding-top: 27px;
    margin: 6px 0;
    height: 1px;
    overflow: hidden;
    text-align: left;
    border-radius: 14px;
    background-color: #0084b5;
    position: relative;
}
.mobilePaywallMenu .text:before,
.mobilePaywallMenu .tipsoss span:before,
.storearticle a:before{
    font-family: 'paywallIcons';
    speak: none;
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    position: absolute;
}
.mobilePaywallMenu .widget .icon {
    display:none;
}
.mobilePaywallMenu .mnoDropdown .mnoDropdownContent {
    padding: 0;
}
.storedArticlesTrigger .count {
    display: none;
}
/* logged out user: [lock icon] */
.mobilePaywallMenu .userAccount .text:before {
    content: "\6c";
    color: #e2edf3;
    font-size: 21px;
    right: 3px;
    top: 2px;
}
/* logged in user:  [open lock icon] */
.hasAccess .mobilePaywallMenu .userAccount .text:before {
    content: "\75";
    color: #e2edf3;
    font-size: 21px;
    right: 4px;
    top: 2px;
}
.mobilePaywallMenu .storedArticlesTrigger .text:before {
    content: "\73";
    color: #fff;
    font-size: 15px;
    right: 6px;
    top: 6px;
}
.mobilePaywallMenu .storedArticlesTrigger .text {
    background: url("/skins/publications/bt/gfx/icons/star-bg.png") no-repeat 0 0;
    background-size: 100%;
    border-radius: 0;
}
.hasAccess .mobilePaywallMenu .storedArticlesTrigger .text:before {
    color: #1385b5;
}
.mobilePaywallMenu .tipsoss span:before {
    content: "\74";
    color: #e2edf3;
    font-size: 22px;
    right: 2px;
    top: 2px;
}

