<content-types xmlns="http://xmlns.escenic.com/2008/content-type"
               xmlns:ui="http://xmlns.escenic.com/2008/interface-hints"
               xmlns:geocode="http://xmlns.escenic.com/2009/studio/plugin/geocode"
               xmlns:rep="http://xmlns.escenic.com/2009/representations"
               version="4">
  <!-- field group for picture widget -->
  <!-- general fields -->
  <field-group name="picture-widget-general-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view chosen for the picture widget</ui:description>
      <enumeration value="section">
        <ui:label>Section</ui:label>
      </enumeration>
      <enumeration value="article">
        <ui:label>Article</ui:label>
      </enumeration>
      <enumeration value="newsletter">
        <ui:label>Newsletter</ui:label>
      </enumeration>

      <ui:value-if-unset>section</ui:value-if-unset>
    </field>
  </field-group>

  <!-- section view fields -->
  <field-group name="picture-widget-section-fields">
    <field name="groupName" type="basic" mime-type="text/plain">
      <ui:label>Group name</ui:label>
      <ui:description>The name of the group from where pictures will be fetched</ui:description>
    </field>
    <field name="sectionUniqueName" type="basic" mime-type="text/plain">
      <ui:label>Section Unique Name</ui:label>
      <ui:description>Section uniquename of the section the widget will look into for a group with content to be
        displayed in the widget
      </ui:description>
    </field>
    <field name="maxPictures" type="number">
      <ui:label>Maximum number of Pictures</ui:label>
      <ui:description>Maximum number of pictures to be displayed</ui:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>##</format>
    </field>
    <field name="includeArticleRelatedPicturesSection" type="boolean">
      <ui:label>Include article related pictures</ui:label>
      <ui:boolean-label value="true">Include related pictures of articles in specified group</ui:boolean-label>
      <ui:boolean-label value="false">Don't include related pictures of articles in specified group</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="showWidgetName" type="boolean">
      <ui:label>Show widget title</ui:label>
      <ui:boolean-label value="true">Show widget title at the top</ui:boolean-label>
      <ui:boolean-label value="false">Don't show widget title at the top</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

  <!-- article view fields -->
  <field-group name="picture-widget-article-fields">
    <field name="pictureFields" type="enumeration" multiple="true">
      <ui:label>Picture content Fields</ui:label>
      <ui:description>The fields of the picture type content</ui:description>
      <enumeration value="caption">
        <ui:label>Caption</ui:label>
      </enumeration>
      <enumeration value="picture">
        <ui:label>Picture</ui:label>
      </enumeration>
      <enumeration value="byline">
        <ui:label>Byline</ui:label>
      </enumeration>
      <enumeration value="dateline">
        <ui:label>Dateline</ui:label>
      </enumeration>
      <enumeration value="credits">
        <ui:label>Photo credits</ui:label>
      </enumeration>
      <enumeration value="description">
        <ui:label>Description</ui:label>
      </enumeration>
      <enumeration value="metadata">
        <ui:label>Metadata</ui:label>
      </enumeration>
    </field>

    <field name="dateFormat" type="basic" mime-type="text/plain">
      <ui:label>Dateline date format</ui:label>
      <ui:description>The simple date format, that will be used for the dateline</ui:description>
      <ui:value-if-unset>dd MMMM yyyy hh:mm a</ui:value-if-unset>
    </field>
  </field-group>

  <!-- section view fields -->
  <field-group name="picture-widget-newsletter-fields">
    <field name="groupName_newsletter" type="basic" mime-type="text/plain">
      <ui:label>Group name</ui:label>
      <ui:description>The name of the group from where pictures will be fetched</ui:description>
    </field>
    <field name="sectionUniqueName_newsletter" type="basic" mime-type="text/plain">
      <ui:label>Section Unique Name</ui:label>
      <ui:description>Section uniquename of the section the widget will look into for a group with content to be
        displayed in the widget
      </ui:description>
    </field>
    <field name="maxPictures_newsletter" type="number">
      <ui:label>Maximum number of Pictures</ui:label>
      <ui:description>Maximum number of pictures to be displayed</ui:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>1</ui:value-if-unset>
    </field>
    <field name="showWidgetName_newsletter" type="boolean">
      <ui:label>Show widget title</ui:label>
      <ui:boolean-label value="true">Show widget title at the top</ui:boolean-label>
      <ui:boolean-label value="false">Don't show widget title at the top</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

  <!-- advanced fields -->
  <field-group name="picture-widget-advanced-fields">
    <field name="softCrop" type="boolean">
      <ui:label>Soft cropping</ui:label>
      <ui:description>Defines if the widget should use the the original uncropped image or
        if the widget should ise a cropped image.
        Cropped images are recommended for full width images.
        Original image is recommended for portrait image
      </ui:description>
      <ui:boolean-label value="true">Use cropped image</ui:boolean-label>
      <ui:boolean-label value="false">Use original image</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="imageVersion" type="basic" mime-type="text/plain">
      <ui:label>Image representation</ui:label>
      <ui:description>The name of the image representation to be used</ui:description>
    </field>
    <field name="contentType" type="basic" mime-type="text/plain">
      <ui:label>Picture content type name</ui:label>
      <ui:description>The content type name for pictures</ui:description>
      <ui:value-if-unset>picture</ui:value-if-unset>
    </field>
    <field name="animation" type="enumeration">
      <ui:label>Animation</ui:label>
      <ui:description>The type of animation that will be used to display picture information</ui:description>
      <enumeration value="slide">
        <ui:label>Slide</ui:label>
      </enumeration>
      <enumeration value="always-on">
        <ui:label>Always On</ui:label>
      </enumeration>
      <ui:value-if-unset>slide</ui:value-if-unset>
    </field>
  </field-group>

  <!--content type for picture widget -->
  <content-type name="widget_picture">
    <ui:icon>generic</ui:icon>
    <ui:label>Picture Widget</ui:label>
    <ui:description>This widget is used to display a single picture based on picture content type</ui:description>
    <ui:title-field>title</ui:title-field>

    <panel name="general">
      <ui:label>General</ui:label>
      <ui:description>The general fields to configure picture widget</ui:description>
      <ref-field-group name="basic-widget-fields"/>
      <ref-field-group name="picture-widget-general-fields"/>
    </panel>

    <panel name="section">
      <ui:label>Section</ui:label>
      <ui:description>The section view configuration fields</ui:description>
      <ref-field-group name="picture-widget-section-fields"/>
    </panel>

    <panel name="article">
      <ui:label>Article</ui:label>
      <ui:description>The article view configuration fields</ui:description>
      <ref-field-group name="picture-widget-article-fields"/>
    </panel>

    <panel name="newsletter">
      <ui:label>Newsletter</ui:label>
      <ui:description>The newsletter view configuration fields</ui:description>
      <ref-field-group name="picture-widget-newsletter-fields"/>
    </panel>

    <panel name="advanced">
      <ui:label>Advanced</ui:label>
      <ui:description>The advanced configuration options for picture widget</ui:description>
      <ref-field-group name="basic-widget-style-fields"/>
      <ref-field-group name="picture-widget-advanced-fields"/>
      <ref-field-group name="noPrint-fields"/>
    </panel>

    <panel name="caching">
      <ui:label>Caching</ui:label>
      <ui:description>Allows you to control web cache settings</ui:description>
      <ref-field-group name="caching-basic-fields"/>
      <ref-field-group name="cache-control-public-fields"/>
    </panel>

    <summary>
      <ui:label>Content Summary</ui:label>
      <field name="title" type="basic" mime-type="text/plain">
        <ui:label>Title</ui:label>
      </field>
    </summary>
  </content-type>
</content-types>