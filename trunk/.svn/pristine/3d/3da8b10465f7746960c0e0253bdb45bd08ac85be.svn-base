/* mobile header */

#header {
    background-color: #3f698d;
    background-image: url(data:image/svg+xml;base64,);
    background-image: -moz-linear-gradient(top,  rgba(0,0,0,0.34) 0%, rgba(0,0,0,0) 100%);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.34)), color-stop(100%,rgba(0,0,0,0)));
    background-image: -webkit-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: -o-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: -ms-linear-gradient(top,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    background-image: linear-gradient(to bottom,  rgba(0,0,0,0.34) 0%,rgba(0,0,0,0) 100%);
    font-size: 16px;
}

.sideMenuMobile {
    max-width: 18%;
}
.sideMenuTrigger {
    width: 1.8em;
    height: 3em;
    display: block;
    position: relative;
    padding-left: 1em;
    cursor: pointer;
    float: left;
}
.sideMenuTrigger:before {
    content: '';
    position: absolute;
    top: 0.8em;
    left: 0.55em;
    width: 2em;
    height: 0.375em;
    border-top: 0.813em double white;
    border-bottom: 0.250em solid white;
}
.logoMobile {
    max-width: 45%;
    width: 9em;
    margin-left: 0.2em;
}
.logoMobile .logo {
    width: 100%;
    padding: 4px 0 0;
}
.logo a {
    background: url("/skins/publications/vestnytt/gfx/vestnytt_logo.png") no-repeat top center;
    width: 100%;
    height: 2.6em;
    background-size:100% auto;
    display: block;
    margin-left: 0;
    margin-top: 0.6em;
    color: white;
}
.logo a span {
    visibility: hidden;
}
.weatherMobile {
    margin-top: 10px;
}
#header .nowForecastForHeader .temp.warm {
    color: #f00;
}
#header .nowForecastForHeader .sted {
    color: #fff;
}
#header .nowForecastForHeader .label {
    margin-right: 10px;
}

@media only screen and (max-width: 360px) {
    .weatherMobile {
        max-width: 20%;
        min-width: 72px;
        padding: 0;
        margin-top: 0;
    }
    .weatherMobile a {
        display: block;
    }
    .weatherMobile .sted {
        display: block;
        clear: both;
    }
    #header .weatherMobile .nowForecastForHeader {
        min-height: 25px;
        height: auto;
        width: 100%;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        margin-top: 0;
    }
    #header .weatherMobile .nowForecastForHeader .label {
        margin-right: 0;
    }
}

/* mobile dialog box */
#mnoDialogBg {
    background: black;
    background: rgba(0, 0, 0, .8);
    filter: alpha(opacity=80);
    position: absolute;
    top: 0;
    left: 0;
    z-Index: 1000;
    width: 100%;
    height: 100%;
}
#mnoDialog {
    background: white;
    border: 5px solid #666;
    border: 5px solid rgba(0, 0, 0, .5);
    -moz-border-radius: 12px;
    -webkit-border-radius: 12px;
    border-radius: 12px;
    -moz-box-shadow: 0 0 20px #000;
    -webkit-box-shadow: 0 0 20px black;
    box-shadow: 0 0 20px black;
    position: fixed;
    z-index: 1001;
    padding: 10px;
    overflow-x: visible;
}
#mnoDialogClose{
    background:#333;
    border:2px solid #fff;
    -moz-border-radius:12px;
    -webkit-border-radius:12px;
    border-radius:12px;
    -moz-box-shadow:0 1px 2px #000;
    -webkit-box-shadow:0 1px 2px #000;
    box-shadow:0 1px 2px #000;
    color:#fff;
    cursor:pointer;
    font-size:14px;
    font-weight:bold;
    line-height:20px;
    text-shadow:0 1px 2px #000;
    text-align:center;
    position:absolute;
    right:-15px;
    top:-15px;
    width:20px;
    height:20px
}

.article h2.subTitle {
    font-size:20px;
}