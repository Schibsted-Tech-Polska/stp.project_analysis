.noBorder #page {
    -moz-box-shadow:none;
        -webkit-box-shadow: none;
        box-shadow: none;
    border:0 none;
    margin: 0;
    padding: 20px 0 0;
    overflow:hidden;
}

.noBorder #page:before,
.noBorder #page:after {
    display:none;
}

html.noMargin{
    margin: 0;
    padding: 0;
}

.noBorder #viewport {
    min-width: 980px;
    padding:0;
}

.noBorder #page #header {
    margin-bottom:0;
}

.noBorder #page #content{
    display:none;
}