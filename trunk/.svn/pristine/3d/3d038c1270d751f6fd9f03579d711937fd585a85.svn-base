.surround {
    background-color: #222;
}

#sideMenu{
    color: #fff;
    display:block;
    position:absolute;
        top:0;
        left:0;
    width:75%;
}

body.ios50 #page,
body.ios4 #page {

}

#sideMenu li {
    border-bottom: 1px solid #000;
        border-top: 1px solid #333;
}

/* The first level menu items */
#sideMenu li {
    font-family: georgia, serif;
    font-size: 20px;
    font-weight: bold;
}

#sideMenu li.activeSection, #sideMenu li.activeSection li.activeSection {
    background: #111;
    border-top: 1px solid #000;
}

#sideMenu li.activeSection li {
    background: #222;
}


#sideMenu li .link {
    display: inline-block;
    padding: 10px 0 10px 5%;
    width:75%;
}
#sideMenu li li .link {
    width: 90%;
    margin-left: 5%;
    font-weight: normal;
}

/* The headers inside the menu */
#sideMenu .sideMenuHeader {
    background-color: #4f4f4f;
        background-image: -moz-linear-gradient(top,  #333 0%, #111 100%);
        background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#333), color-stop(100%,#111));
        background-image: -webkit-linear-gradient(top,  #333 0%,#111 100%);
        background-image: -o-linear-gradient(top,  #333 0%,#111 100%);
        background-image: -ms-linear-gradient(top,  #333 0%,#111 100%);
        background-image: linear-gradient(top,  #333 0%,#111 100%);
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#333', endColorstr='#111',GradientType=0 );
    font-family: "DINWeb", Arial, sans-serif;
        font-size: 15px;
    color: #e6e6e6;
    padding: 0;
    text-align: center;
    border-bottom: 1px solid #000;
}

/* The search field in the menu */
#sideMenu .sideMenuSearch {
    background-color: #111;
    width:100%;
    height: 40px;
    padding: 10px 0 0 14px;
}

/* The input search field inside the menu */
#sideMenu .sideMenuSearch input {
    color: #fff;
    font-size: 18px;
    background-color:transparent;
    border: 0 solid;
    box-shadow: 0 0 0 #4195fc;
        -moz-box-shadow: 0 0 0 #4195fc;
        -webkit-box-shadow: 0 0 0 #4195fc;
    padding: 0;
        margin: 6px 0 0;
    width: 75%;
        height: 20px;
}

#sideMenu .sideMenuSearch input:focus {
    color: #fff !important;
}

#sideMenu #searchbutton {
    border: none;
    margin: -3px 5% 0 0;
    float:right;
    font-style: normal;
    text-shadow: none;
    width: 10%;
        height: 40px;
}

#sideMenu #searchbutton {
    background-color: transparent;
        background-image: none;
}

#sideMenu #searchbutton:before {
    content: "m";
    color: #fff;
    font-family: fvn, sans-serif;
        font-size: 19px;
}
.ie #sideMenu #searchbutton:before {
    font-family: fvnEOT, sans-serif;
}


#sideMenu ul {
    padding: 0;
        margin: 0;
}

#sideMenu ul li ul {
    border-top: 1px black solid;
}

#sideMenu ul li ul li {
    color: #e5e5e5;
    font-family: "DINWeb", Arial, sans-serif;
        font-size: 18px;
}

#sideMenu .closed {
    display: none;
}

.openclose {
    color: #fff;
    display: inline-block;
    font-size: 18px;
        font-weight: normal;
    padding: 12px 5% 8px;
    width: 7%;
}

.notiemobile .openclose:before {
    content: "+";
    font-family: fvn, sans-serif;
}
.notiemobile .openclose.cross:before {
    content: "x";
}
.ie .notiemobile .openclose:before {
    font-family: fvnEOT, sans-serif;
}

#sideMenu.iemobile .openclose,
#sideMenu.iemobile .openclose.cross {
    background-image:url('/skins/publications/fvn/gfx/sprite_mobile_480.png');
    margin: 5px 13px 0 0;
    width: 14px;
        height: 14px;
}
#sideMenu.iemobile .openclose {
    background-position:-175px -233px;
}
#sideMenu.iemobile .openclose.cross {
    background-position:-134px -233px;
}

#sideMenu.iemobile #searchbutton {
    background-image:url('/skins/publications/fvn/gfx/sprite_mobile_480.png');
    background-position:-493px -8px;
    width: 41px;
        height: 41px;
}