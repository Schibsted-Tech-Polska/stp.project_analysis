.leadText {
    font-family: Arial, sans-serif;
    font-weight: bold;
}

article .bodyText {
    font-family: Arial, Helvetica, sans-serif;
}

.byline {
    font-family: Verdana, sans-serif;
    background-color: #fff;
    border: 0 none;
    margin-bottom: 25px;
}
.byline .prefix {
    display: none;
}
.byline:before{
    content: '';
    background-color: rgb(157, 0, 0);
    border-radius: 1em;
    width: 0.8em;
    height: 0.8em;
    margin-left: 0;
    display: inline-block;
    vertical-align: 0;
}
.relationArticle header {
    margin-bottom: 0;
    border-bottom:3px solid rgb( 75, 134, 198);
    font-family: Tahoma;
}

.relationArticle header h2 {
    margin-bottom:0px;
}
.relationArticle header h2:after{
    content: '';
    background-color: rgb(157, 0, 0);
    border-radius: 1em;
    width: 0.8em;
    height: 0.8em;
    margin-left: 0;
    display: inline-block;
    vertical-align: 0;
    margin-left:10px;
}

.relationArticle .content.withImg {
    font-family: Arial, sans-serif;
}

.relationArticle .content p {
    font-weight:normal;
}
