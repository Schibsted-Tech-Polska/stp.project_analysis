<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
    "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <form-beans>
    <form-bean name="SimpleCommentForm" type="com.escenic.forum.struts.presentation.CommentForm"/>
    <form-bean name="CaptchaCommentForm" type="com.escenic.framework.captcha.CaptchaCommentForm"/>
    <form-bean name="ComplaintForm" type="com.escenic.forum.struts.presentation.ComplaintForm"/>
  </form-beans>

  <action-mappings>
    <action path="/forum/addComment"
            type="com.escenic.forum.struts.presentation.InsertCommentAction"
            name="SimpleCommentForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>

    <action path="/forum/addCaptchaComment"
            type="com.escenic.forum.struts.presentation.InsertCommentAction"
            name="CaptchaCommentForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>

    <action path="/forum/addAuthenticatedComment"
            type="com.escenic.framework.struts.CustomAuthenticatedInsertCommentAction"
            name="SimpleCommentForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>

    <action path="/forum/addComplaint"
            type="com.escenic.forum.struts.presentation.InsertPostingAction"
            name="ComplaintForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>

    <action path="/forum/addCaptchaComplaint"
            type="com.escenic.forum.struts.presentation.InsertPostingAction"
            name="ComplaintForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>

    <action path="/forum/addAuthenticatedComplaint"
            type="com.escenic.forum.struts.presentation.AuthenticatedInsertPostingAction"
            name="ComplaintForm"
            input="/template/common.jsp"
            validate="false"
            scope="request">
      <forward name="target" path="/"/>
    </action>
  </action-mappings>
</struts-config>