  <!--default filed group-->
  <field-group name="slideshow-widget-default-fields">
    <field name="maxPictures" type="number">
      <ui:label>Maximum number of Pictures</ui:label>
      <ui:description>Maximum number of pictures to be displayed in the slideshow</ui:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>#</format>
    </field>
    <field name="autoplay" type="boolean">
      <ui:label>Enable autoplay</ui:label>
      <ui:boolean-label value="true">Start rotating images automatically</ui:boolean-label>
      <ui:boolean-label value="false">Don't start rotating images automatically</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
    <field name="slideDuration" type="number">
      <ui:label>Time interval for autoplay (in sec)</ui:label>
      <constraints>
        <minimum>1</minimum>
        <maximum>9</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>3</ui:value-if-unset>
    </field>
    <field name="slideNav" type="boolean">
      <ui:label>Enable sliding of bottom navigation bar</ui:label>
      <ui:boolean-label value="true">Turn on sliding of bottom navigation bar</ui:boolean-label>
      <ui:boolean-label value="false">Turn off sliding of bottom navigation bar</ui:boolean-label>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

  <!-- advanced fields -->
  <field-group name="slideshow-widget-advanced-fields">
