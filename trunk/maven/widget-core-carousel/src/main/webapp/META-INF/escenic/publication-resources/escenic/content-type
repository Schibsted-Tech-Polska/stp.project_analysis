  <!--field group for carousel widgets-->
  <field-group name="carousel-widget-basic-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>The view to be used to render the widget</ui:description>
      <enumeration value="simple">
        <ui:label>Simple</ui:label>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this view if you want a single carousel containing content items from the same group in the same section.</p>
				</doc:description>
      </enumeration>
      <enumeration value="complex">
        <ui:label>Complex</ui:label>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this view if you want a tabbed carousel in which each tab contains a different set of content items from a different section/group.</p>
				</doc:description>
      </enumeration>
      <ui:value-if-unset>simple</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="carousel-widget-simple-fields">
    <field name="sectionUniqueNameSimple" type="basic" mime-type="text/plain">
      <ui:label>Section Unique Name</ui:label>
      <ui:description>The unique name of the section from where articles will be fetched</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Enter the <em>unique name</em> of the section containing the content items you want to display
        in the carousel.</p>
			</doc:description>
    </field>
    <field name="groupNameSimple" type="basic" mime-type="text/plain">
      <ui:label>Group Name</ui:label>
      <ui:description>The name of the group from where the articles to be displayed will be fetched</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Enter the name of the section page group containing the content items you want to display in the carousel.</p>
			</doc:description>
    </field>
    <field name="contentTypesSimple" type="basic" mime-type="text/plain">
      <ui:label>Content types</ui:label>
      <ui:description>The comma-separated names of the content types</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>If you only want certain types of content item to be selected for display in the carousel, enter the names of
          content types in this field, separated by commas. Only content items of the types you specify will then be 
          displayed in the carousel. You can use this field to ensure that only content items with suitable content 
          are selected for inclusion - the content items selected must, for example, have a related image that can
          be displayed in the carousel.</p>

        <p>If you leave this field empty then all content items in the selected group are included in the carousel.</p>
			</doc:description>
    </field>
    <field name="showFilmstripSimple" type="boolean">
      <ui:label>Show filmstrip</ui:label>
      <ui:boolean-label value="true">Show filmstrip</ui:boolean-label>
      <ui:boolean-label value="false">Don't show filmstrip</ui:boolean-label>
      <ui:description>Showing the filmstrip will show thumbnails of items</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want a film strip showing thumbnail versions of items in the carousel 
          to be displayed below the main display. The film strip contains four thumbnails by default, but you
          can change this with the <em>Maximum number of items per page in filmstrip</em> option.</p>
			</doc:description>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showNavigationArrowsSimple" type="boolean">
      <ui:label>Show filmstrip navigation arrows</ui:label>
      <ui:boolean-label value="true">Show filmstrip navigation arrows</ui:boolean-label>
      <ui:boolean-label value="false">Don't show filmstrip navigation arrows</ui:boolean-label>
      <ui:description>Showing the filmstrip navigation arrows will show arrows to navigate filmstrip items
      </ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want navigation arrows to be displayed at either end of the film strip.
          If you check this option and the carousel contains more than one page, then the reader
          can use these arrows to navigate through the complete set of thumbnails, one page at a time.</p>
			</doc:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showNavigationIndicatorsSimple" type="boolean">
      <ui:label>Show filmstrip navigation indicators</ui:label>
      <ui:boolean-label value="true">Show filmstrip navigation indicators</ui:boolean-label>
      <ui:boolean-label value="false">Don't show filmstrip navigation indicators</ui:boolean-label>
      <ui:description>Showing the filmstrip navigation indicators will show indicators to navigate filmstrip items
      </ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want navigation indicators to be displayed below the film strip. The
          indicators are a row of buttons, one for each page of items in the carousel. One of the 
          indicators is highlighted to show the current page displayed in the film strip. The reader can
          navigate to other pages by clicking on the indicators.</p>
			</doc:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showOverlaySimple" type="boolean">
      <ui:label>Show overlay</ui:label>
      <ui:boolean-label value="true">Show overlay</ui:boolean-label>
      <ui:boolean-label value="false">Don't show overlay</ui:boolean-label>
      <ui:description>Showing overlay will show the title, lead text, no. of comments etc. over the display picture of
        carousel
      </ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want titles (and possibly other information) to be overlaid on the images 
          displayed in the carousel.</p>
			</doc:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showLeadTextSimple" type="boolean">
      <ui:label>Show lead text</ui:label>
      <ui:boolean-label value="true">Show lead text</ui:boolean-label>
      <ui:boolean-label value="false">Don't show lead text</ui:boolean-label>
      <ui:description>Showing lead text will show the lead text of the content</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want the overlay text displayed by the <em>Show overlay</em> option to 
          include the content item's lead text.</p>
			</doc:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showCommentCountSimple" type="boolean">
      <ui:label>Show comment count</ui:label>
      <ui:boolean-label value="true">Show comment count</ui:boolean-label>
      <ui:boolean-label value="false">Don't show comment count</ui:boolean-label>
      <ui:description>Showing comment count will show the number of comments of the content</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want the overlay text displayed by the <em>Show overlay</em> option to 
          include the content item's comment count.</p>
			</doc:description>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

    <field name="showRelatedItemsSimple" type="boolean">
      <ui:label>Show related items</ui:label>
      <ui:boolean-label value="true">Show related items</ui:boolean-label>
      <ui:boolean-label value="false">Don't show related items</ui:boolean-label>
      <ui:description>Showing related items will show the items related to the content of the active article
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Check this option if you want the overlay text displayed by the <em>Show overlay</em> option to 
          include the content item's related content items.</p>
			</doc:description>
      </ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>
  </field-group>

