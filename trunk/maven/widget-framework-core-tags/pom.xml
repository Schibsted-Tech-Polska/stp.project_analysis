<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>widget-framework</artifactId>
    <groupId>com.escenic.widget-framework</groupId>
    <version>1.4.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <name>Widget Framework Core Tags</name>
  <groupId>com.escenic.widget-framework</groupId>
  <artifactId>widget-framework-core-tags</artifactId>
  <version>${parent.version}</version>
  <packaging>jar</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>package</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <delete file="target/widget-framework-core-tags-${project.version}.jar" failonerror="false"/>
                <jar destfile="target/widget-framework-core-tags-${project.version}.jar"
                     basedir="src/main/resources"/>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
