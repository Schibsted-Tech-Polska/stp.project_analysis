  <!-- field groups for ad widget-->
  <field-group name="ad-widget-general-fields">
    <field name="view" type="enumeration">
      <ui:label>View</ui:label>
      <ui:description>View used to render the widget</ui:description>
      <enumeration value="script">
        <ui:label>Script</ui:label>
				<ui:description>Script</ui:description>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this view if you have been supplied with a Flash object or snippet of Javascript code for displaying 
            advertisements. This is the view you will normally use if your adverts are supplied by an external 
            advertising service.</p>
				</doc:description>
      </enumeration>
      <enumeration value="content">
        <ui:label>Content</ui:label>
				<ui:description>Content</ui:description>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this view if you have an image content item that is to be used as the advert. The image content 
            item must be dropped into the Ad widget's <em>Related images</em> drop zone.</p>
				</doc:description>
      </enumeration>
      <enumeration value="newsletter">
        <ui:label>Newsletter</ui:label>
				<ui:description>Content</ui:description>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this view if you want to add an advert to a Newsletter layout. A Newsletter layout generates
            a "stand-alone" HTML page suitable for sending as an email attachment. This view is functionally identical
            to the <em>Content</em> view and therefore requires you to drop the image content item that is to be used 
            as the advert into the Ad widget's <em>Related images</em> drop zone.</p>
				</doc:description>
      </enumeration>
      <ui:value-if-unset>script</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="ad-widget-script-fields">
    <field name="code" type="basic" mime-type="text/plain">
      <ui:label>Ad placement code</ui:label>
      <ui:description>Javascript/Flash code</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Paste the Flash object or Javascript code snippet supplied by your advertiser into this field.</p>
			</doc:description>
    </field>

    <field name="type" type="enumeration">
      <ui:label>Type</ui:label>
      <ui:description>The type of script or code used</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
				<p>Select the appropriate type for the code you have pasted into the <em>Ad placement code</em> field. 
          If you are not sure which type to select, ask the supplier of the advertisement code (or just try 
          the options and see which works best).</p>
			</doc:description>
      <enumeration value="flash">
        <ui:label>Flash</ui:label>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this option if the code you have pasted into the <em>Ad placement code</em> field is a Flash 
            object definition.</p>
				</doc:description>
      </enumeration>
      <enumeration value="code">
        <ui:label>Code</ui:label>
				<doc:description xmlns="http://www.w3.org/1999/xhtml" >
					<p>Select this option if the code you have pasted into the <em>Ad placement code</em> field is 
            Javascript code to be directly included on the page.</p>
				</doc:description>
      </enumeration>
      <ui:value-if-unset>code</ui:value-if-unset>
    </field>
  </field-group>

  <field-group name="ad-widget-content-fields">
    <field name="format" type="enumeration">
