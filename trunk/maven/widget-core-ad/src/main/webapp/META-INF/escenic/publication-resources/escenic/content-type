    </field>

    <field name="linkTitle" type="basic" mime-type="text/plain">
      <ui:label>Link title</ui:label>
      <ui:description>Text used as link title, visible when mouse is hovering over the image</ui:description>
			<doc:description xmlns="http://www.w3.org/1999/xhtml" >
