<project>
  <parent>
    <artifactId>widget-framework</artifactId>
    <groupId>com.escenic.widget-framework</groupId>
    <version>1.4.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.escenic.widget-framework</groupId>
  <artifactId>widget-framework-mobile</artifactId>
  <name>Widget Framework Mobile Widgets</name>
  <version>${parent.version}</version>
  <packaging>war</packaging>
  <url>https://jira.vizrt.com/browse/EWF</url>

  <dependencies>
    <dependency>
      <groupId>com.escenic.widget-framework</groupId>
      <artifactId>widget-framework-core-tags</artifactId>
      <version>${parent.version}</version>
      <scope>provided</scope>
    </dependency>
      <dependency>
          <groupId>mobiletech</groupId>
          <artifactId>frame-taglib-render</artifactId>
          <version>3.0.14</version>
            <exclusions>
                <!-- These jar files are added to engine-lib -->
                <exclusion>
                    <groupId>mobiletech</groupId>
                    <artifactId>devicelib</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>joda-time</artifactId>
                    <groupId>joda-time</groupId>
                </exclusion>
            </exclusions>
      </dependency>
      <!-- we would still like to compile with these -->
      <dependency>
          <groupId>mobiletech</groupId>
          <artifactId>devicelib</artifactId>
          <version>1.0.10</version>
          <scope>provided</scope>
      </dependency>
      <dependency>
          <groupId>mobiletech</groupId>
          <artifactId>frame-taglib-widgets</artifactId>
          <version>3.0.14</version>
      </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
