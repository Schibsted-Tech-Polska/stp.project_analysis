      <ui:boolean-label value="false">Don't show slideshow title</ui:boolean-label>
      <ui:description>Specifies if the title of the slideshow will be shown</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
	      <required>true</required>
	    </constraints>
    </field>

