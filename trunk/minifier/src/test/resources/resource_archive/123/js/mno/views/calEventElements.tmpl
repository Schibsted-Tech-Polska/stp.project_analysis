{{each columns}}
    {{if topcolumn}}
        <div id="woColumn${columnNr}-${tabIndex}" class="woTopColumn">
    {{else}}
        <div id="woColumn${columnNr}-${tabIndex}" class="woBottomColumn">
    {{/if}}
        {{each events}}
            <div class="woEvent">
                <div class="woEventContent">
                    <div class="woEventHeader woDate">
                        <div class="woDateContent" style="${eventHeaderFontSize}">
                            {{html eventName}}
                        </div>
                        <div class="${eventLinkClass} woEventInfoLink">
                            <span class="ui-icon ui-icon-info"/>
                        </div>
                    </div>
                    <div class="woEventTime">
                        {{html eventTime}}
                    </div>
                    <div class="${venueInfoClass} woEventVenueLink" style="${venueInfoFontSize}">
                        {{html itemVenueName}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
