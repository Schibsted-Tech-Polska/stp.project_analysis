{{each(i) items}}
    <li class="item {{if (i==0)}}active{{/if}}">
        <a href="${link}" class="imageLeft"><img src="${img}" alt="" /></a>
        <h2><a href="${link}">{{html title}}</a></h2>
        <div class="large" style="width:${width}px">
            <a href="${link}"><img src="${largeImg}" alt="" /></a>
            <h2><a href="${link}">{{html title}}</a></h2>
            <p class="teaserText">{{html teaser}}</p>
        </div>
    </li>
{{/each}}