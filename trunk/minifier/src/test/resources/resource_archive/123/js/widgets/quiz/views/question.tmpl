<form action="${SITEURL}quiz/" method="get" class="question" name="quiz">
{{each items}}
    {{if img}}
        <div class="media imageRight">
            <img src="${img}" alt=""/>
            {{if caption}}
                <p class="caption">{{html caption}}</p>
            {{/if}}
        </div>
    {{/if}}
    <h2><span class="number">${number}</span>${question}</h2>
    <ul class="alternatives">
    {{each alternatives}}
        <li class="answers"><label><input type="radio" name="answers" value="${answerId}"/> ${answer}</label></li>
    {{/each}}
    </ul>
    <nav>
        <span class="questionCounter">Sp&oslash;rsm&aring;l <strong>${number}</strong> av <strong>${total}</strong>&nbsp;</span>
        <input type="button" value="Neste" class="button next"/>
        {{if hint}}
            <a href="${hint}" target="_blank">Gi meg et hint</a>
        {{/if}}
    </nav>
{{/each}}
</form>
