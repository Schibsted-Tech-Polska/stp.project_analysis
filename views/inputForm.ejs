<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <h1><%= title %></h1>
    <form method='post'/>
    <p class='warning'><input type='text', name='gitCommand', placeholder='type git command', value='git clone'/>
      <input type='text', name='link', placeholder='link', size='35'/>
     <%if (errorMessages.gitCommand){%> <%= errorMessages.gitCommand %> <% } %> 
      <%if (errorMessages.linkMsg){ %> <%= errorMessages.linkMsg %> <% } %>
     </p>
    <select name="targetLanguage" id="targetLanguage">
      <option value="java">java</option>
      <option value="php">php</option>
      <option value="js-sonar">js sonar</option>
      <option value="js-plato">js plato</option>
    </select>
    <p ><input type='text', name='javaBuildCommand', placeholder='java build  command'/>
      <input type='text', name='sources', placeholder='location of sources' />
    <%if (errorMessages.javaBuildCommand){ %> <%= errorMessages.javaBuildCommand %> <% } %>
    <%if (errorMessages.sourcesMsg){ %> <%= errorMessages.sourcesMsg %> <% } %>
    
    </p>
    <p class='warning' ><input type='text' name='binaries', placeholder='location of complied classes' />
    <%if (errorMessages.binariesMsg){ %> <%= errorMessages.binariesMsg %> <% } %> 
    </p>

     
     <!--
     <h2>choose language.</h2>
    <div class="languagebox"><div data-lang="js" title="JavaScript" class="language"><div class="icon-prog-js01"></div><p>JavaScript</p></div><div data-lang="java" title="Java" class="language"><div class="icon-prog-java"></div><p>Java</p></div><div data-lang="php" title="Php" class="language"><div class="icon-prog-php"></div><p>Php</p></div>
-->
    <p class="formfield">
      <label for='textarea'> files to ignore: </label> 
      <textarea id='textarea', type'text', rows="5", cols="20", name='filesToOmit'/> <%= jsFilesToOmit %> </textarea></p>
    <p><input type='submit', value='start analysis'/></p>

    </form>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
  <script type="text/javascript">
  $(function () {
    $("#targetLanguage").change(function() {
      var val = $(this).val();
      console.log('val : ' + val);
      if(val === "java") {
          show(document.getElementsByName('javaBuildCommand')[0]);
          show(document.getElementsByName('sources')[0]);
          show(document.getElementsByName('binaries')[0]);
      }
      else {
        console.log('else')
          var jbc = $('#javaBuildCommand');
          hide(document.getElementsByName('javaBuildCommand')[0]);
          hide(document.getElementsByName('sources')[0]);
          hide(document.getElementsByName('binaries')[0]);
          //console.log(jbc);
          //jbc.css('display', 'none');
          //$("#javaBuildCommand").hide('fast');
          //$("#sources").hide();
      }
    });
  })

  function hide(element){
    element.style.display = 'none';
  }
  function show(element){
    element.style.display = 'inline';
  }
  </script>
  </body>
</html>